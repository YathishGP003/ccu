<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="#AB2828" android:startColor="#C23030" />

            <stroke android:width="1px" android:color="#681919" />

            <corners android:radius="2dp" />

            <padding android:bottom="10dp" android:left="5dp" android:right="5dp" android:top="10dp" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="#BB3838" android:startColor="#D24040" />

            <stroke android:width="1px" android:color="#791919" />

            <corners android:radius="2dp" />

            <padding android:bottom="10dp" android:left="5dp" android:right="5dp" android:top="10dp" />
        </shape></item>
    <item android:state_enabled="false"><shape>
            <gradient android:angle="270" android:endColor="#66AB2828" android:startColor="#66C23030" />

            <stroke android:width="1px" android:color="#66681919" />

            <corners android:radius="2dp" />

            <padding android:bottom="10dp" android:left="5dp" android:right="5dp" android:top="10dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="#CB4848" android:startColor="#D34050" />

            <stroke android:width="1px" android:color="#681919" />

            <corners android:radius="2dp" />

            <padding android:bottom="10dp" android:left="5dp" android:right="5dp" android:top="10dp" />
        </shape></item>

</selector>