<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <layer-list>
            <!-- Oval background for the thumb -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="@android:color/white" />
                    <stroke
                        android:width="1dp"
                        android:color="?orange_75f" />
                    <size
                        android:width="28dp"
                        android:height="24dp" />
                </shape>
            </item>
            <!-- Checkmark icon -->
            <item
                android:gravity="center"
                android:drawable="@drawable/custom_ccu_check_mark" />
        </layer-list>
    </item>

    <item android:state_checked="false">
        <layer-list>
            <!-- Oval background for the thumb -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="@android:color/white" />
                    <stroke
                        android:width="1dp"
                        android:color="#666666" />
                    <size
                        android:width="28dp"
                        android:height="24dp" />
                </shape>
            </item>
            <!-- Wrong mark icon -->
            <item
                android:gravity="center"
                android:drawable="@drawable/custom_ccu_cancel_mark" />
        </layer-list>
    </item>

</selector>
