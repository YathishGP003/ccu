<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Error State -->
    <item android:state_selected="true" >
        <layer-list>
            <item android:bottom="0dp">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
            <item android:bottom="0dp" android:height="2dp" android:gravity="bottom">
                <shape android:shape="rectangle">
                    <solid android:color="@color/warning_red" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Focused State -->
    <item android:state_focused="true" android:state_selected="false">
        <layer-list>
            <item android:bottom="0dp">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
            <item android:bottom="0dp" android:height="2dp" android:gravity="bottom">
                <shape android:shape="rectangle">
                    <solid android:color="@color/black" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Default -->
    <item android:state_focused="false">
        <layer-list>
            <item android:bottom="0dp">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
            <item android:bottom="0dp" android:height="1dp" android:gravity="bottom">
                <shape android:shape="rectangle">
                    <solid android:color="@color/tuner_group" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>

