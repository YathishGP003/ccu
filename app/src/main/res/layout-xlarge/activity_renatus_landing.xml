<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="?attr/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/floorMenu"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:clickable="true"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_floormenu" />

        <ImageView
            android:id="@+id/menuToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_menu" />

        <ImageButton
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@color/grey_select"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/x75f_new" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            style="@style/RenatusLandingTabStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:tabGravity="fill"
            android:layout_marginStart="12dp"
            app:tabIndicator="@color/accent"
            app:tabIndicatorHeight="6dp"
            app:tabMode="fixed" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <android.support.design.widget.TabLayout
            android:id="@+id/btnTabs"
            style="@style/RenatusTabStyle"
            android:layout_width="140dp"
            android:layout_height="?actionBarSize"
            app:tabBackground = "@null"
            app:tabRippleColor="@null"
            app:tabIndicator="@color/accent"
            app:tabIndicatorHeight="6dp"
            app:tabMaxWidth="70dp"
            app:tabGravity="fill"
            app:tabMode="fixed">

            <android.support.design.widget.TabItem
                android:id="@+id/pageSettingButton"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:icon="@drawable/ic_settings_orange"
                android:padding="8dp" />

            <android.support.design.widget.TabItem
                android:id="@+id/pageDashBoardButton"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:icon="@drawable/ic_tachometer"
                android:padding="8dp" />
        </android.support.design.widget.TabLayout>
    </LinearLayout>


    <a75f.io.renatus.registartion.CustomViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</LinearLayout>
