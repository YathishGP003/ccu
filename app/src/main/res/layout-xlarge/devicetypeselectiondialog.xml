<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_height="match_parent"
              android:layout_width="match_parent"
              android:orientation="vertical"
        android:background="@color/white">

    <TextView
        style="@style/WindowTextStyle"
        android:id="@+id/default_text_view"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="20dp"
        android:text="place holder"
        android:visibility="gone">
    </TextView>

    <RelativeLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp">

        <ImageView
            android:id="@+id/imageGoback"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="2.5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="64dp"
            android:rotation="180"
            app:srcCompat="@drawable/icon_arrowright" />

        <TextView
            android:id="@+id/textTitleFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="190dp"
            android:layout_centerVertical="true"
            android:fontFamily="@font/lato_bold"
            android:text="@string/label_selectdevicetype"
            android:textAllCaps="true"
            android:textColor="@color/orange_75f"
            android:textSize="33.5dp"
            android:textStyle="bold" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_below="@+id/layoutHeader"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_smartnode"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginLeft="440dp">

            <ImageView
                android:layout_width="279dp"
                android:layout_height="130dp"
                android:src="@drawable/image_sn"
                android:layout_alignParentBottom="true"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="220dp"
                android:orientation="vertical"
                android:layout_centerVertical="true">
            <TextView
                android:id="@+id/textSN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/title_sn"
                android:textAppearance="@style/title_normal"/>

            <TextView
                android:id="@+id/textSmartNode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_smartnode"
                android:textAppearance="@style/text_label"/>

            </LinearLayout>
            <ImageView
                android:id="@+id/nextSN"
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:layout_marginRight="96dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_arrowright"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/text_color"
                android:alpha="0.37"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_smartstat"
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:layout_marginLeft="440dp">

            <ImageView
                android:layout_width="279dp"
                android:layout_height="62dp"
                android:src="@drawable/image_smartstat"
                android:layout_alignParentBottom="true"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="220dp"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textSS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="@string/title_ss"
                    android:textAppearance="@style/title_normal"/>

                <TextView
                    android:id="@+id/textSmartStat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_smartstat"
                    android:textAppearance="@style/text_label"/>

            </LinearLayout>
            <ImageView
                android:id="@+id/nextSS"
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:layout_marginRight="96dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_arrowright"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/text_color"
                android:alpha="0.37"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_wirelesstemp"
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:layout_marginLeft="440dp">

            <ImageView
                android:layout_width="279dp"
                android:layout_height="83dp"
                android:src="@drawable/image_wtm"
                android:layout_alignParentBottom="true"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="220dp"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textWTM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="@string/title_wtm"
                    android:textAppearance="@style/title_normal"/>

                <TextView
                    android:id="@+id/textWirelessTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_wirelesstemp"
                    android:textAppearance="@style/text_label"/>

            </LinearLayout>
            <ImageView
                android:id="@+id/nextWTM"
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:layout_marginRight="96dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_arrowright"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/text_color"
                android:alpha="0.37"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_ccu"
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:layout_marginLeft="440dp">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="114dp"
                android:src="@drawable/image_ccu"
                android:layout_marginLeft="10dp"
                android:layout_alignParentBottom="true"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="220dp"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textCCU"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="@string/title_ccu"
                    android:textAppearance="@style/title_normal"/>

                <TextView
                    android:id="@+id/textCentralControl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ccufullform"
                    android:textAppearance="@style/text_label"/>

            </LinearLayout>
            <ImageView
                android:id="@+id/nextCCU"
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:layout_marginRight="96dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_arrowright"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/text_color"
                android:alpha="0.37"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <RadioGroup
            android:id="@+id/deviceTypeSelection"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone">

            <RadioButton
                android:id="@+id/smartNode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="135dp"
                android:text="Smartnode"
                android:textSize="@dimen/text_medium_xlarge" />


            <RadioButton
                android:id="@+id/smartstat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="200dp"
                android:text="SmartStat"
                android:textSize="@dimen/text_medium_xlarge" />


        </RadioGroup>

        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone">

            <RadioButton
                android:id="@+id/hia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="150dp"
                android:clickable="false"
                android:focusable="false"
                android:text="ITM-HIA"
                android:textColor="@color/selection_gray"/>


            <RadioButton
                android:id="@+id/lpi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="180dp"
                android:clickable="false"
                android:focusable="false"
                android:text="ITM-LPI"
                android:textColor="@color/selection_gray"/>
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="right"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:visibility="gone">

        <Button
            style="@style/buttonstyle"
            android:id="@+id/first_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Cancel"></Button>

        <Button
            style="@style/buttonstyle"
            android:id="@+id/second_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Pair"></Button>

    </LinearLayout>

</RelativeLayout>
