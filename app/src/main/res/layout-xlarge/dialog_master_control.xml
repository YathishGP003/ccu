<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="970dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:background="@color/selection_gray"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                style="@style/text_appearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SETLIMITS"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="10dp"
                android:src="@drawable/icon_close"
                app:tint="@color/white" />
        </RelativeLayout>

        <a75f.io.renatus.views.MasterControl.MasterControlView
            android:id="@+id/masterControlView"
            android:layout_width="940dp"
            android:layout_height="450dp"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/masterControlView"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnCancel"
                style="?action_text_appearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:padding="8dp"
                android:text="CANCEL" />

            <TextView
                android:id="@+id/btnSet"
                style="?action_text_appearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="40dp"
                android:padding="8dp"
                android:text="SET" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>