    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <RelativeLayout
            android:id="@+id/rlFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="78dp"
            android:scrollbars="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputSitename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorTextAppearance="@style/error_appearance">

                <EditText
                    android:id="@+id/editSitename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="left|center_vertical"
                    android:nextFocusDown="@+id/timeZoneSelector"
                    android:singleLine="true"
                    android:maxLength="25"
                    android:textColor="@color/input_textcolor"
                    android:textSize="19.5dp" />
            </android.support.design.widget.TextInputLayout>


            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/timeZoneSelector"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@+id/textInputSitename"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/textTimeZone"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_below="@+id/timeZoneSelector"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/lato_regular"
                android:paddingLeft="10dp"
                android:text="@string/input_timezone"
                android:textSize="16dp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputStreeAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textTimeZone"
                android:layout_marginTop="-9dp"
                app:errorTextAppearance="@style/error_appearance">

                <EditText
                    android:id="@+id/editStreetAdd"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="left|center_vertical"
                    android:nextFocusDown="@+id/editCity"
                    android:singleLine="true"
                    android:textColor="@color/input_textcolor"
                    android:textSize="19.5dp" />
            </android.support.design.widget.TextInputLayout>


            <LinearLayout
                android:id="@+id/ltCityState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textInputStreeAdd"
                android:layout_marginTop="-9dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputCity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-9dp"
                    app:errorTextAppearance="@style/error_appearance"
                    android:layout_weight="1"
                    android:layout_marginRight="40dp">

                    <EditText
                        android:id="@+id/editCity"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="left|center_vertical"
                        android:nextFocusDown="@+id/editState"
                        android:singleLine="true"
                        android:textColor="@color/input_textcolor"
                        android:textSize="19.5dp" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputState"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textTimeZone"
                    android:layout_marginLeft="40dp"
                    app:errorTextAppearance="@style/error_appearance"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/editState"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="left|center_vertical"
                        android:nextFocusDown="@+id/editCountry"
                        android:singleLine="true"
                        android:textColor="@color/input_textcolor"
                        android:textSize="19.5dp" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ltCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ltCityState"
                android:layout_marginTop="-9dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputCountry"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textTimeZone"
                    android:layout_weight="1"
                    android:layout_marginRight="40dp"
                    app:errorTextAppearance="@style/error_appearance">

                    <EditText
                        android:id="@+id/editCountry"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="left|center_vertical"
                        android:nextFocusDown="@+id/editZip"
                        android:singleLine="true"
                        android:textColor="@color/input_textcolor"
                        android:textSize="19.5dp" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputZip"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textTimeZone"
                    android:layout_marginLeft="40dp"
                    android:layout_weight="1"
                    app:errorTextAppearance="@style/error_appearance">

                    <EditText
                        android:id="@+id/editZip"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="left|center_vertical"
                        android:nextFocusDown="@+id/editCCU"
                        android:singleLine="true"
                        android:inputType="number"
                        android:textColor="@color/input_textcolor"
                        android:textSize="19.5dp" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputCCU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ltCountry"
                android:layout_marginTop="-9dp"
                app:errorTextAppearance="@style/error_appearance">

                <EditText
                    android:id="@+id/editCCU"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="left|center_vertical"
                    android:nextFocusDown="@+id/editFacilityEmail"
                    android:singleLine="true"
                    android:maxLength="25"
                    android:textColor="@color/input_textcolor"
                    android:textSize="19.5dp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textInputCCU"
                android:layout_marginTop="-9dp"
                app:errorTextAppearance="@style/error_appearance">

                <EditText
                    android:id="@+id/editFacilityEmail"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="left|center_vertical"
                    android:singleLine="true"
                    android:inputType="textWebEmailAddress"
                    android:textColor="@color/input_textcolor"
                    android:textSize="19.5dp" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/buttonNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textInputEmail"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:drawableRight="@drawable/icon_arrowright"
                android:drawablePadding="5dp"
                android:fontFamily="@font/lato_bold"
                android:text="@string/button_next"
                android:textColor="@color/orange_75f"
                android:textSize="24dp" />
        </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>