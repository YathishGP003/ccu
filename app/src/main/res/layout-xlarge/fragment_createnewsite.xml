    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/rlFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="78dp"
            android:scrollbars="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputSitename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorTextAppearance="?error_appearance">

                <EditText
                    android:id="@+id/editSitename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="left|center_vertical"
                    android:maxLength="25"
                    android:nextFocusDown="@+id/timeZoneSelector"
                    android:singleLine="true"
                    android:textColor="@color/input_textcolor"
                    android:textSize="19.5dp" />
            </com.google.android.material.textfield.TextInputLayout>


            <Spinner
                android:id="@+id/timeZoneSelector"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@+id/textInputSitename"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                tools:listitem="@layout/spinner_dropdown_item"
                />

            <TextView
                android:id="@+id/textTimeZone"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_below="@+id/timeZoneSelector"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/lato_regular"
                android:paddingLeft="10dp"
                android:text="@string/input_timezone"
                android:textSize="16dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputStreeAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textTimeZone"
                android:layout_marginTop="-9dp"
                app:errorTextAppearance="?error_appearance">

                <EditText
                    android:id="@+id/editStreetAdd"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="left|center_vertical"
                    android:nextFocusDown="@+id/editCity"
                    android:singleLine="true"
                    android:textColor="@color/input_textcolor"
                    android:textSize="19.5dp" />
            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                android:id="@+id/ltCityState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textInputStreeAdd"
                android:layout_marginTop="-9dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputCity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-9dp"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    app:errorTextAppearance="?error_appearance">

                    <EditText
                        android:id="@+id/editCity"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="left|center_vertical"
                        android:nextFocusDown="@+id/editState"
                        android:singleLine="true"
                        android:textColor="@color/input_textcolor"
                        android:textSize="19.5dp" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputState"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textTimeZone"
                    android:layout_marginLeft="40dp"
                    android:layout_weight="1"
                    app:errorTextAppearance="?error_appearance">

                    <EditText
                        android:id="@+id/editState"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="left|center_vertical"
                        android:nextFocusDown="@+id/editCountry"
                        android:singleLine="true"
                        android:textColor="@color/input_textcolor"
                        android:textSize="19.5dp" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ltCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ltCityState"
                android:layout_marginTop="-9dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputCountry"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textTimeZone"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    app:errorTextAppearance="?error_appearance">

                    <EditText
                        android:id="@+id/editCountry"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="left|center_vertical"
                        android:nextFocusDown="@+id/editZip"
                        android:singleLine="true"
                        android:textColor="@color/input_textcolor"
                        android:textSize="19.5dp" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputZip"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textTimeZone"
                    android:layout_marginLeft="40dp"
                    android:layout_weight="1"
                    app:errorTextAppearance="?error_appearance">

                    <EditText
                        android:id="@+id/editZip"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="left|center_vertical"
                        android:inputType="number"
                        android:nextFocusDown="@+id/editCCU"
                        android:singleLine="true"
                        android:textColor="@color/input_textcolor"
                        android:textSize="19.5dp" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputCCU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ltCountry"
                android:layout_marginTop="-9dp"
                app:errorTextAppearance="?error_appearance">

                <EditText
                    android:id="@+id/editCCU"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="left|center_vertical"
                    android:maxLength="25"
                    android:nextFocusDown="@+id/editFacilityEmail"
                    android:singleLine="true"
                    android:textColor="@color/input_textcolor"
                    android:textSize="19.5dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textInputCCU"
                android:layout_marginTop="-9dp"
                app:errorTextAppearance="?error_appearance">

                <EditText
                    android:id="@+id/editFacilityEmail"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="left|center_vertical"
                    android:inputType="textWebEmailAddress"
                    android:singleLine="true"
                    android:textColor="@color/input_textcolor"
                    android:textSize="19.5dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputInstallerEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textInputEmail"
                android:layout_marginTop="-9dp"
                app:errorTextAppearance="?error_appearance">

                <EditText
                    android:id="@+id/editInstallerEmail"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="left|center_vertical"
                    android:inputType="textWebEmailAddress"
                    android:singleLine="true"
                    android:textColor="@color/input_textcolor"
                    android:textSize="19.5dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputOrganization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textInputInstallerEmail"
                android:layout_marginTop="-9dp"
                app:errorTextAppearance="?error_appearance">

                <EditText
                    android:id="@+id/editFacilityOrganization"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="left|center_vertical"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="@color/input_textcolor"
                    android:textSize="19.5dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/btnSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textInputOrganization"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/btnEditSite"
                    style="?action_text_appearance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawablePadding="50dp"
                     android:text="@string/title_edit" />
                <ImageView
                    android:id="@+id/imgEditSite"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="2.5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:rotation="180"
                    app:srcCompat="@drawable/ic_edit_site"
                    app:tint="?orange_75f" />
                <View
                    android:layout_width="0.1dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:background="@color/grey_select"
                    android:gravity="center"
                    android:padding="4dp" />


                <TextView
                    android:id="@+id/btnUnregisterSite"
                    style="?action_text_appearance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawablePadding="50dp"
                    app:tint="?orange_75f"
                    android:text="@string/title_unregister" />
                <ImageView
                    android:id="@+id/imgUnregisterSite"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="2.5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:rotation="180"
                    app:srcCompat="@drawable/ic_unregister"
                    app:tint="?orange_75f" />
            </LinearLayout>

            <Button
                android:visibility="visible"
                android:id="@+id/buttonNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textInputOrganization"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:drawablePadding="5dp"
                android:fontFamily="@font/lato_bold"
                android:text="@string/button_next"
                android:textColor="?orange_75f"
                android:textSize="24dp" />
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>