<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/damperscrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:overScrollMode="never">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layoutHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">


                <TextView
                    android:id="@+id/textTitleFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/lato_bold"
                    android:text="@string/title_dabinput"
                    android:textAllCaps="true"
                    android:textColor="?orange_75f"
                    android:textSize="33.5sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textTempOffset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/label_tempoffset"
                    android:textAppearance="@style/label_values" />

                <NumberPicker
                    android:theme="?DefaultNumberPickerTheme"
                    android:id="@+id/temperatureOffset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#202020"
                    android:textSize="30sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="36dp"
                android:orientation="horizontal"
                android:paddingTop="20dp">

                <TextView
                    android:id="@+id/textDamper1Type"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/label_damper1type"
                    android:textAppearance="@style/title_normal" />

                <Spinner
                    android:id="@+id/damper1Type"
                    style="@style/customSpinnerDownArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="50dp"
                    android:layout_toEndOf="@+id/textDamper1Type"
                    android:entries="@array/hvac_stage_selector"
                    tools:listitem="@layout/spinner_dropdown_item" />

                <TextView
                    android:id="@+id/textDamper1Size"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="82dp"
                    android:layout_toEndOf="@+id/damper1Type"
                    android:text="@string/label_damper1size"
                    android:textAppearance="@style/title_normal" />


                <Spinner
                    android:id="@+id/damper1Size"
                    style="@style/customSpinnerDownArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="46dp"
                    android:layout_toEndOf="@+id/textDamper1Size"
                    android:entries="@array/hvac_stage_selector"
                    android:minWidth="76dp"
                    tools:listitem="@layout/spinner_dropdown_item" />

                <TextView
                    android:id="@+id/textdamper1Shape"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="90dp"
                    android:layout_toEndOf="@+id/damper1Size"
                    android:text="@string/label_damper1shape"
                    android:textAppearance="@style/title_normal" />

                <Spinner
                    android:id="@+id/damper1Shape"
                    style="@style/customSpinnerDownArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/textdamper1Shape"
                    android:entries="@array/hvac_stage_selector"
                    tools:listitem="@layout/spinner_dropdown_item" />

                <TextView
                    android:id="@+id/textDamper2Type"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/damper1Shape"
                    android:layout_alignStart="@+id/textDamper1Type"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="36dp"
                    android:text="@string/label_damper2type"
                    android:textAppearance="@style/title_normal" />

                <Spinner
                    android:id="@+id/damper2Type"
                    style="@style/customSpinnerDownArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_below="@+id/damper1Shape"
                    android:layout_alignEnd="@+id/damper1Type"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="36dp"
                    android:layout_toEndOf="@+id/textDamper2Type"
                    android:entries="@array/hvac_stage_selector"
                    tools:listitem="@layout/spinner_dropdown_item" />

                <TextView
                    android:id="@+id/textDamper2Size"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/damper1Shape"
                    android:layout_alignStart="@+id/textDamper1Size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="36dp"
                    android:layout_toEndOf="@+id/damper2Type"
                    android:text="@string/label_damper1size"
                    android:textAppearance="@style/title_normal" />


                <Spinner
                    android:id="@+id/damper2Size"
                    style="@style/customSpinnerDownArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/damper1Shape"
                    android:layout_alignStart="@+id/damper1Size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="36dp"
                    android:layout_toEndOf="@+id/textDamper1Size"
                    android:entries="@array/hvac_stage_selector"
                    android:minWidth="76dp"
                    tools:listitem="@layout/spinner_dropdown_item" />

                <TextView
                    android:id="@+id/textdamper2Shape"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/damper1Shape"
                    android:layout_alignStart="@+id/textdamper1Shape"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="36dp"
                    android:layout_toEndOf="@+id/damper2Size"
                    android:text="@string/label_damper1shape"
                    android:textAppearance="@style/title_normal" />

                <Spinner
                    android:id="@+id/damper2Shape"
                    style="@style/customSpinnerDownArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/damper1Shape"
                    android:layout_alignStart="@+id/damper1Shape"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="36dp"
                    android:layout_toEndOf="@+id/textdamper2Shape"
                    android:entries="@array/hvac_stage_selector"
                    tools:listitem="@layout/spinner_dropdown_item" />

                <TextView
                    android:id="@+id/textUseReheat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/damper2Type"
                    android:layout_alignStart="@+id/textDamper2Type"
                    android:layout_gravity="center"
                    android:layout_marginTop="34dp"
                    android:text="@string/label_usereheat"
                    android:textAppearance="@style/title_normal" />

                <Spinner
                    android:id="@+id/useReheat"
                    style="@style/customSpinnerDownArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/damper2Type"
                    android:layout_alignEnd="@+id/damper2Type"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="34dp"
                    android:minWidth="76dp"
                    tools:listitem="@layout/spinner_dropdown_item" />


                <TextView
                    android:id="@+id/textZonePriority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/damper2Shape"
                    android:layout_alignStart="@+id/textDamper2Size"
                    android:layout_gravity="center"
                    android:layout_marginTop="34dp"
                    android:text="@string/label_zonepriority"
                    android:textAppearance="@style/title_normal" />

                <Spinner
                    android:id="@+id/zonePriority"
                    style="@style/customSpinnerDownArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/damper2Shape"
                    android:layout_alignEnd="@+id/damper2Shape"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="34dp"
                    android:entries="@array/hvac_stage_selector"
                    android:minWidth="76dp"
                    tools:listitem="@layout/spinner_dropdown_item" />

                <TextView
                    android:id="@+id/textEnableIAQ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/zonePriority"
                    android:layout_alignStart="@+id/textDamper2Type"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="32dp"
                    android:text="@string/label_enableIAQ"
                    android:textAppearance="@style/title_normal" />

                <include
                    android:id="@+id/enableIAQControl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/zonePriority"
                    android:layout_alignEnd="@id/damper2Type"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="22dp"
                    layout="@layout/custom_ccu_switch" />

                <TextView
                    android:id="@+id/textEnableautoforceoccupied"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textEnableIAQ"
                    android:layout_alignStart="@+id/textDamper2Type"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="32dp"
                    android:text="@string/autoforceoccupied"
                    android:textAppearance="@style/title_normal" />

                <include
                    android:id="@+id/enableAFOControl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/enableIAQControl"
                    android:layout_alignEnd="@id/damper2Type"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="17dp"
                    layout="@layout/custom_ccu_switch" />


                <TextView
                    android:id="@+id/textEnableCFM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textEnableautoforceoccupied"
                    android:layout_alignStart="@+id/textEnableautoforceoccupied"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="32dp"
                    android:text="@string/label_enable_cfm"
                    android:textAppearance="@style/title_normal"
                    android:visibility="visible" />

                <include
                    android:id="@+id/enableCFMControl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/enableAFOControl"
                    android:layout_alignStart="@+id/enableAFOControl"
                    android:layout_marginTop="20dp"
                    layout="@layout/custom_ccu_switch" />

                <TextView
                    android:id="@+id/textKFactor"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@id/textEnableautoAway"
                    android:layout_alignStart="@+id/textEnableautoAway"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="32dp"
                    android:text="@string/label_k_factor"
                    android:textAppearance="@style/title_normal"
                    android:visibility="gone" />


                <Spinner
                    android:id="@+id/enableKFactor"
                    style="@style/customSpinnerDownArrow"
                    android:layout_width="120dp"
                    android:layout_height="42dp"
                    android:layout_below="@id/textEnableautoAway"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="32dp"
                    android:layout_toEndOf="@+id/textKFactor"
                    android:entries="@array/hvac_stage_selector"
                    android:textAppearance="@style/title_normal"
                    tools:listitem="@layout/spinner_dropdown_item"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/textEnableCO2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/zonePriority"
                    android:layout_alignStart="@+id/textZonePriority"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="32dp"
                    android:text="@string/label_enableCO2"
                    android:textAppearance="@style/title_normal" />

                <include
                    android:id="@+id/enableCO2Control"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/zonePriority"
                    android:layout_alignEnd="@id/zonePriority"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="30dp"
                    layout="@layout/custom_ccu_switch" />

                <TextView
                    android:id="@+id/textEnableautoAway"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textEnableCO2"
                    android:layout_alignStart="@+id/textEnableCO2"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="32dp"
                    android:text="@string/autoaway"
                    android:textAppearance="@style/title_normal" />

                <include
                    android:id="@+id/enableAutoAwayControl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/enableCO2Control"
                    android:layout_alignEnd="@id/enableCO2Control"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="15dp"
                    layout="@layout/custom_ccu_switch" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="42dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/minReheatDamperPos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="22dp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/label_min_reheat_damper_pos"
                        android:textAppearance="@style/label_values" />

                    <NumberPicker
                        android:id="@+id/numMinReheatDamperPos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:theme="?DefaultNumberPickerTheme"
                        android:textSize="30sp">

                    </NumberPicker>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/minCFMForIAQ"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="22dp"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/label_min_cfm_for_iaq"
                        android:textAppearance="@style/label_values" />

                    <NumberPicker
                        android:id="@+id/numMinCFMForIAQ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:theme="?DefaultNumberPickerTheme"
                        android:textSize="30sp">

                    </NumberPicker>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="22dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/textMaxCool"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/label_maxdampercoolpos"
                        android:textAppearance="@style/label_values" />

                    <NumberPicker
                        android:theme="?DefaultNumberPickerTheme"
                        android:id="@+id/maxDamperPos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="30sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="22dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textMinCool"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/label_mindampercoolpos"
                        android:textAppearance="@style/label_values" />

                    <NumberPicker
                        android:theme="?DefaultNumberPickerTheme"
                        android:id="@+id/minDamperPos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="30sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="22dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textMaxHeat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/label_maxdamperheatpos"
                        android:textAppearance="@style/label_values" />


                    <NumberPicker
                        android:theme="?DefaultNumberPickerTheme"
                        android:id="@+id/maxHeatingDamperPos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="30sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="22dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textMinHeat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="@string/label_mindamperheatpos"
                        android:textAppearance="@style/label_values" />

                    <NumberPicker
                        android:theme="?DefaultNumberPickerTheme"
                        android:id="@+id/minHeatingDamperPos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="30sp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/setBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="30dp"
                android:background="@null"
                android:button="@null"
                android:fontFamily="@font/lato_regular"
                android:text="@string/button_set"
                android:textAllCaps="true"
                android:textColor="?orange_75f"
                android:textSize="19.5sp" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>