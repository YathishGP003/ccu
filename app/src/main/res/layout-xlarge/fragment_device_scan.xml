<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/available_devices_layout"
        android:layout_width="490dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/lato_bold"
            android:text="@string/available_devices"
            android:textColor="#212121"
            android:textSize="26dp" />

        <ListView
            android:id="@+id/ble_device_list_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp" />

        <TextView
            android:id="@+id/pairManuallyText1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/smart_device_advertisement_mode_not_finding_device"
            android:textColor="#333333"
            android:layout_marginBottom="30dp"
            android:visibility="gone"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/connect_manually"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="262dp"
            android:layout_marginBottom="40dp"
            android:text="@string/connect_manually"
            android:textColor="?orange_75f"
            android:textSize="22dp"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/no_devices_layout"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/lato_bold"
            android:text="@string/no_devices_found"
            android:textColor="#212121"
            android:textSize="26dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/lato_regular"
            android:text="@string/have_smart_device_in_advertisement_mode"
            android:textColor="#333333"
            android:layout_marginBottom="30dp"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/pairManuallyText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/lato_regular"
            android:text="@string/want_to_pair_device_manually"
            android:textColor="#333333"
            android:textSize="22dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/connect_manually_no_device"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="370dp"
            android:layout_marginBottom="40dp"
            android:text="@string/connect"
            android:textColor="?orange_75f"
            android:visibility="gone"
            android:textSize="22dp" />
    </LinearLayout>
</LinearLayout>
