<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/floorPlanLayout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:baselineAligned="false"
              android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:orientation="vertical" android:divider="@drawable/vline">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Floors"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="?orange_75f"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ Add Floor"
                android:textSize="30dp"
                android:clickable="true"
                android:id="@+id/addFloorBtn"
                android:textColor="#555"/>-->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="30dp"
                android:id="@+id/addFloorEdit"
                android:imeOptions="actionDone"
                android:inputType="text"/>

            <ImageButton
                android:id="@+id/addFloorBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_input_add"/>
        </FrameLayout>
        <ListView
            android:id="@+id/floorList"
            android:animateLayoutChanges="true"
            android:layout_width="match_parent"
            android:overScrollMode="never"
            android:listSelector="@drawable/selector"
            android:layout_height="wrap_content">
        </ListView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:orientation="vertical" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rooms"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="?orange_75f"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ Add Room"
                android:textSize="30dp"
                android:clickable="true"
                android:id="@+id/addRoomBtn"
                android:textColor="#555"/>-->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="30dp"
                android:id="@+id/addRoomEdit"
                android:imeOptions="actionDone"
                android:inputType="text"/>
            <ImageButton
                android:id="@+id/addRoomBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_input_add"/>
        </FrameLayout>
        <ListView
            android:id="@+id/roomList"
            android:animateLayoutChanges="true"
            android:layout_width="match_parent"
            android:overScrollMode="never"
            android:listSelector="@drawable/selector"
            android:layout_height="wrap_content">
        </ListView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:orientation="vertical" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modules"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="?orange_75f"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ Pair Module"
                android:textSize="30dp"
                android:clickable="true"
                android:id="@+id/addModuleBtn"
                android:textColor="#555"/> -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="30dp"
                android:enabled="false"
                android:visibility="invisible"
                android:id="@+id/addModuleEdit"
                android:imeOptions="actionDone"
                android:inputType="text"/>
            <ImageButton
                android:id="@+id/pairModuleBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_input_add"/>
        </FrameLayout>
        <ListView
            android:id="@+id/moduleList"
            android:animateLayoutChanges="true"
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:listSelector="@drawable/selector"
            android:layout_height="wrap_content">
        </ListView>
    </LinearLayout>
</LinearLayout>