<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layoutCreateNewSite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageGoback"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="64dp"
            android:padding="2.5dp"
            android:rotation="180"
            app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/textInstaller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="310dp"
            android:fontFamily="@font/lato_bold"
            android:gravity="start|center_vertical"
            android:text="@string/title_installeroption"
            android:textAllCaps="true"
            android:textColor="?orange_75f"
            android:textSize="33.5sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutCreateNewSite">

        <RelativeLayout
            android:id="@+id/rlFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="78dp"
            android:scrollbars="vertical">

            <TextView
                android:id="@+id/textCCU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/lato_bold"
                android:text="@string/title_ccu"
                android:textAllCaps="true"
                android:textColor="?orange_75f"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textPairingAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textCCU"
                android:layout_marginStart="76dp"
                android:layout_marginTop="42dp"
                android:alpha="0.87"
                android:text="@string/pairingadd"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textPairingDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textPairingAddress"
                android:layout_marginStart="76dp"
                android:alpha="0.60"
                android:text="@string/pairingadddesc"
                android:textColor="@color/black"
                android:textSize="19.5sp" />

            <Spinner
                android:id="@+id/spinnerAddress"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="120dp"
                android:layout_height="42dp"
                android:layout_below="@+id/textCCU"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="42dp"
                />

            <TextView
                android:id="@+id/textCoolingLockout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textPairingDesc"
                android:layout_marginStart="76dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="16dp"
                android:alpha="0.87"
                android:text="@string/use_outside_temp_lockout_cooling"
                android:textColor="@color/black"
                android:textSize="25sp" />


            <TextView
                android:id="@+id/textUseCoolingLockoutDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textCoolingLockout"
                android:layout_marginStart="76dp"
                android:alpha="0.60"
                android:text="@string/cooling_lockout_desc"
                android:textColor="@color/black"
                android:textSize="19.5sp" />

            <ToggleButton
                android:id="@+id/toggleCoolingLockout"
                android:layout_width="47dp"
                android:layout_height="28dp"
                android:layout_below="@+id/textPairingDesc"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="36dp"
                android:background="@drawable/toggle_selector"
                android:checked="false"
                android:textOff=""
                android:textOn="" />

            <TextView
                android:id="@+id/textCoolingLockoutTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textUseCoolingLockoutDesc"
                android:layout_marginStart="76dp"
                android:layout_marginTop="20dp"
                android:alpha="0.87"
                android:text="@string/no_mechanical_cooling_below"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/spinnerCoolingLockoutTemp"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="110dp"
                android:layout_height="42dp"
                android:layout_below="@+id/toggleCoolingLockout"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="42dp" />

            <TextView
                android:id="@+id/textHeatingLockout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textCoolingLockoutTemp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="76dp"
                android:layout_marginTop="36dp"
                android:alpha="0.87"
                android:text="@string/use_outside_temp_lockout_heating"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <ToggleButton
                android:id="@+id/toggleHeatingLockout"
                android:layout_width="47dp"
                android:layout_height="28dp"
                android:layout_below="@+id/textCoolingLockoutTemp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="36dp"
                android:background="@drawable/toggle_selector"
                android:checked="false"
                android:textOff=""
                android:textOn="" />

            <TextView
                android:id="@+id/textHeatingLockoutDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textHeatingLockout"
                android:layout_marginStart="76dp"
                android:alpha="0.60"
                android:text="@string/heating_lockout_desc"
                android:textColor="@color/black"
                android:textSize="19.5sp" />

            <TextView
                android:id="@+id/textHeatingLockoutTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textHeatingLockoutDesc"
                android:layout_alignStart="@+id/textHeatingLockout"
                android:layout_marginTop="16dp"
                android:alpha="0.87"
                android:text="@string/no_mechanical_heating_above"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/spinnerHeatingLockoutTemp"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="110dp"
                android:layout_height="42dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="42dp"
                android:layout_below="@+id/toggleHeatingLockout" />

            <TextView
                android:id="@+id/textBuilding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textHeatingLockoutTemp"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/lato_bold"
                android:text="@string/title_building"
                android:textAllCaps="true"
                android:textColor="?orange_75f"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textTempLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textBuilding"
                android:layout_marginStart="76dp"
                android:layout_marginTop="42dp"
                android:alpha="0.87"
                android:text="@string/templimit"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textTempLimitDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textTempLimit"
                android:layout_marginStart="76dp"
                android:alpha="0.60"
                android:text="@string/templimitdesc"
                android:textColor="@color/black"
                android:textSize="19.5sp" />

            <a75f.io.renatus.views.TempLimit.TempLimitView
                android:id="@+id/imageTemp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/textTempLimitDesc"
                android:layout_marginStart="76dp"
                android:layout_marginTop="36dp" />

            <TextView
                android:id="@+id/textUseCelsius"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageTemp"
                android:layout_marginStart="76dp"
                android:layout_marginTop="36dp"
                android:alpha="0.87"
                android:text="@string/usecelsius"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:visibility="gone" />

            <ToggleButton
                android:id="@+id/toggleCelsius"
                android:layout_width="47dp"
                android:layout_height="28dp"
                android:layout_below="@+id/imageTemp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="36dp"
                android:background="@drawable/toggle_selector"
                android:checked="false"
                android:enabled="true"
                android:textOff=""
                android:textOn=""
                android:visibility="gone" />

            <TextView
                android:id="@+id/textBackfillDurationTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textUseCelsius"
                android:layout_marginStart="76dp"
                android:layout_marginTop="42dp"
                android:alpha="0.87"
                android:text="@string/backFill_duration"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textBackfillTimeDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textBackfillDurationTime"
                android:layout_marginStart="76dp"
                android:alpha="0.60"
                android:text="@string/backFill_duration_description"
                android:textColor="@color/black"
                android:textSize="19.5sp" />


            <Spinner
                android:id="@+id/spinnerBackfillTime"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="42dp"
                android:layout_alignBaseline="@+id/textBackfillDurationTime" />

            <LinearLayout
                android:id="@+id/layoutFooterButtons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@id/spinnerBackfillTime"
                android:layout_alignEnd="@id/spinnerBackfillTime"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:background="@null"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="5sp"
                    android:text="@string/cancel"
                    android:textColor="?orange_75f"
                    android:textSize="19.5sp" />

                <View
                    android:id="@+id/tunerDivider"
                    android:layout_width="0.5sp"
                    android:layout_height="25sp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:background="@color/light_gray" />

                <Button
                    android:id="@+id/buttonApply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:background="@null"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="5sp"
                    android:text="@string/button_apply"
                    android:textColor="?orange_75f"
                    android:textSize="19.5sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textUseMT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textUseCelsius"
                android:layout_marginStart="76dp"
                android:layout_marginTop="36dp"
                android:alpha="0.87"
                android:text="@string/usemiltime"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:visibility="gone" />

            <ToggleButton
                android:id="@+id/toggleMT"
                android:layout_width="47dp"
                android:layout_height="28dp"
                android:layout_below="@+id/textUseCelsius"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="36dp"
                android:background="@drawable/toggle_selector"
                android:checked="true"
                android:enabled="false"
                android:textOff=""
                android:textOn=""
                android:visibility="gone" />

            <TextView
                android:id="@+id/textSingleTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textUseMT"
                android:layout_marginStart="76dp"
                android:layout_marginTop="36dp"
                android:alpha="0.87"
                android:text="@string/usesingletemp"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:visibility="gone" />


            <ToggleButton
                android:id="@+id/toggleSingleTemp"
                android:layout_width="47dp"
                android:layout_height="28dp"
                android:layout_below="@+id/textUseMT"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="36dp"
                android:background="@drawable/toggle_selector"
                android:checked="false"
                android:enabled="false"
                android:textOff=""
                android:textOn=""
                android:visibility="gone" />

            <TextView
                android:id="@+id/textTempforAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textSingleTemp"
                android:layout_marginStart="76dp"
                android:layout_marginTop="36dp"
                android:alpha="0.87"
                android:text="@string/usetempforall"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:visibility="gone" />

            <ToggleButton
                android:id="@+id/toggleTempAll"
                android:layout_width="47dp"
                android:layout_height="28dp"
                android:layout_below="@+id/textSingleTemp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="36dp"
                android:background="@drawable/toggle_selector"
                android:checked="false"
                android:enabled="false"
                android:textOff=""
                android:textOn=""
                android:visibility="gone" />

            <TextView
                android:id="@+id/textNetworkError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/errorNetwork"
                android:textColor="?orange_75f"
                android:textSize="26dp"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="96sp"
                android:layout_below="@+id/imageTemp"
                android:visibility="gone"
                />



            <Button
                android:layout_below="@+id/imageTemp"
                android:id="@+id/buttonNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="24dp"
                android:background="@null"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:drawablePadding="5dp"
                android:fontFamily="@font/lato_bold"
                android:text="@string/button_next"
                android:textColor="?orange_75f"
                android:textSize="24sp" />
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>