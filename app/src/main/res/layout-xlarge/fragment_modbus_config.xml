<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textTitleFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/lato_bold"
            android:text="@string/title_modbus"
            android:textAllCaps="true"
            android:textColor="?orange_75f"
            android:textSize="33.5sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/equipDetailLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/textTitleFragment">

        <LinearLayout
            android:id="@+id/equipLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:layout_marginStart="65dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="65dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvEquipmentType"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="65dp"
                android:text="@string/title_equipment_type"
                android:textAppearance="@style/text_appearance"
                app:layout_constraintStart_toStartOf="parent"
               />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spEquipmentType"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="219dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:entries="@array/equipment_type"
                android:spinnerMode="dropdown"
                app:layout_constraintStart_toEndOf="@+id/tvEquipmentType"
                tools:listitem="@layout/spinner_item_custom" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="130dp"
                android:text="@string/title_start_address"
                android:textAppearance="@style/text_appearance"
                app:layout_constraintStart_toEndOf="@+id/spEquipmentType" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spAddress"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="219dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:entries="@array/address_setting"
                android:spinnerMode="dropdown"
                app:layout_constraintStart_toEndOf="@+id/tvAddress"
                tools:listitem="@layout/spinner_item_custom" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/editSlaveId"
                android:layout_width="219dp"
                android:layout_height="45dp"
                android:singleLine="true"
                android:hint="Slave Address"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toEndOf="@+id/tvAddress"
                app:layout_constraintTop_toBottomOf="@+id/textTitleFragment"
                android:visibility="gone"
                android:inputType="number"
                android:contentDescription="TODO"/>

            <ImageView
                android:id="@+id/ivEditAddress"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="65dp"
                app:layout_constraintStart_toEndOf="@+id/spAddress"
                app:layout_constraintTop_toBottomOf="@+id/textTitleFragment"
                app:srcCompat="@drawable/ic_edit_accent"
                android:visibility="gone"
                android:contentDescription="TODO" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/selectAllLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="350dp"
            android:layout_marginTop="38dp"
            app:layout_constraintTop_toBottomOf="@+id/equipLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_select_all_params"
                android:textAppearance="@style/text_appearance"
                android:layout_marginRight="35dp"/>
            <ToggleButton
                android:id="@+id/toggleSelectAllParams"
                android:layout_width="47dp"
                android:layout_height="28dp"
                android:background="@drawable/toggle_selector"
                android:checked="false"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/paramHeader"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:layout_marginStart="65dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="65dp"
            android:weightSum="2"
            app:layout_constraintTop_toBottomOf="@+id/selectAllLayout">
            <LinearLayout
                android:id="@+id/paramHeader1"
                android:layout_weight="1"
                android:visibility="visible"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/title_param"
                    android:textAppearance="@style/text_label" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/title_display"
                    android:textAppearance="@style/text_label" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/paramHeader2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/title_param"
                    android:textAppearance="@style/text_label" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/title_display"
                    android:textAppearance="@style/text_label" />
            </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerParams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="65dp"
            app:layout_constraintTop_toBottomOf="@+id/paramHeader"/>

        <TextView
            android:id="@+id/header_for_floors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="65dp"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:visibility="gone"
            android:text="@string/title_modbus_energy_proportional_distribution"
            android:textAppearance="@style/text_label"
            app:layout_constraintBottom_toTopOf="@+id/floorList"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.094"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerParams"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/floorList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerParams" />

    </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerSubEquips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:visibility="visible"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="65dp"
            app:layout_constraintTop_toBottomOf="@+id/equipDetailLayout"/>

        <Button
            android:id="@+id/setBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:button="@null"
            android:fontFamily="@font/lato_regular"
            android:text="@string/button_set"
            android:textAllCaps="true"
            android:textColor="?orange_75f"
            android:textSize="19.5sp"
            app:layout_constraintEnd_toEndOf="@+id/recyclerSubEquips"
            app:layout_constraintHorizontal_bias="0.953"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerSubEquips"
            app:layout_constraintVertical_bias="0.466" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
