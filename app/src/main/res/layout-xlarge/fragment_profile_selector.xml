<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_SysProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/system_profile"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="left|center"
        android:textSize="@dimen/text_medium" />



    <LinearLayout
        android:id="@+id/spinnerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="left|center">
        <TextView
            android:id="@+id/txt_header"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="SELECT SYSTEM PROFILE "
            android:layout_gravity="left|center"
            android:textSize="@dimen/text_medium_xlarge"
            android:layout_marginLeft="20dp" />

        <Spinner
            android:id="@+id/spinnerSystemProfile"
            style="@style/TableSpinner"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="left|center"
            android:background="@color/transparent"
            android:dropDownWidth="wrap_content"
            android:foreground="@drawable/custom_spinner_down"
            android:paddingRight="20dp"
            android:popupBackground="@drawable/custom_spinner_softedge"
            android:spinnerMode="dropdown"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/profileContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</LinearLayout>
