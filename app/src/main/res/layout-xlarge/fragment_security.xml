<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layoutCreateNewSite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageGoback"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="2.5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="64dp"
            android:rotation="180"
            app:srcCompat="@drawable/icon_arrowright" />

        <TextView
            android:id="@+id/textInstaller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="310dp"
            android:gravity="left|center_vertical"
            android:fontFamily="@font/lato_bold"
            android:text="@string/title_security"
            android:textAllCaps="true"
            android:textColor="@color/orange_75f"
            android:textSize="33.5dp"
            android:textStyle="bold" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutCreateNewSite"
        android:scrollbars="none"
        android:scrollbarStyle="insideOverlay">

        <RelativeLayout
            android:id="@+id/rlFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="78dp"
            android:scrollbars="vertical">





            <TextView
                android:id="@+id/textPassforZone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textPairingDesc"
                android:layout_marginLeft="76dp"
                android:text="@string/passforzone"
                android:textColor="@color/black"
                android:alpha="0.87"
                android:layout_marginTop="72dp"
                android:textSize="25dp"/>


            <TextView
                android:id="@+id/textTapZone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textPassforZone"
                android:layout_marginLeft="76dp"
                android:text="@string/taptoset"
                android:textColor="@color/black"
                android:alpha="0.60"
                android:textSize="19.5dp"/>


            <ToggleButton
                android:id="@+id/toggleZonePass"
                android:layout_width="47dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/toggle_selector"
                android:checked="false"
                android:layout_marginTop="72dp"
                android:textOff=""
                android:textOn="" />


            <TextView
                android:id="@+id/textPassforSystem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textTapZone"
                android:layout_marginLeft="76dp"
                android:text="@string/passforsystem"
                android:textColor="@color/black"
                android:alpha="0.87"
                android:layout_marginTop="48dp"
                android:textSize="25dp"/>


            <TextView
                android:id="@+id/textTapSystem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textPassforSystem"
                android:layout_marginLeft="76dp"
                android:text="@string/passforsetup"
                android:textColor="@color/black"
                android:alpha="0.60"
                android:textSize="19.5dp"/>


            <ToggleButton
                android:id="@+id/toggleSystemPass"
                android:layout_width="47dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/toggle_selector"
                android:checked="false"
                android:layout_marginTop="48dp"
                android:textOff=""
                android:textOn=""
                android:layout_below="@+id/textTapZone" />


            <TextView
                android:id="@+id/textPassforBuild"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textTapSystem"
                android:layout_marginLeft="76dp"
                android:text="@string/passforbuilding"
                android:textColor="@color/black"
                android:alpha="0.87"
                android:layout_marginTop="48dp"
                android:textSize="25dp"/>


            <TextView
                android:id="@+id/textTapBuild"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textPassforBuild"
                android:layout_marginLeft="76dp"
                android:text="@string/taptoset"
                android:textColor="@color/black"
                android:alpha="0.60"
                android:textSize="19.5dp"/>


            <ToggleButton
                android:id="@+id/toggleBuildingPass"
                android:layout_width="47dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/toggle_selector"
                android:checked="false"
                android:layout_marginTop="48dp"
                android:textOff=""
                android:textOn=""
                android:layout_below="@+id/textTapSystem" />


            <TextView
                android:id="@+id/textPassforSetup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textTapBuild"
                android:layout_marginLeft="76dp"
                android:text="@string/passforsetup"
                android:textColor="@color/black"
                android:alpha="0.87"
                android:layout_marginTop="48dp"
                android:textSize="25dp"/>


            <TextView
                android:id="@+id/textTapSetup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textPassforSetup"
                android:layout_marginLeft="76dp"
                android:text="@string/taptoset"
                android:textColor="@color/black"
                android:alpha="0.60"
                android:textSize="19.5dp"/>


            <ToggleButton
                android:id="@+id/toggleSetupPass"
                android:layout_width="47dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/toggle_selector"
                android:checked="false"
                android:layout_marginTop="48dp"
                android:textOff=""
                android:textOn=""
                android:layout_below="@+id/textTapBuild" />




            <Button
                android:id="@+id/buttonNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textTapSetup"
                android:layout_alignParentRight="true"
                android:layout_marginTop="56dp"
                android:layout_marginBottom="24dp"
                android:background="@null"
                android:drawableRight="@drawable/icon_arrowright"
                android:drawablePadding="5dp"
                android:fontFamily="@font/lato_bold"
                android:text="@string/button_next"
                android:textColor="@color/orange_75f"
                android:textSize="24dp" />

        </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>