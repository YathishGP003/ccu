<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:seekarc="http://schemas.android.com/apk/res-auto"
              android:id="@+id/systemSettingsLayout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:padding="20dp"
              android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:paddingLeft="0dp"
        android:paddingRight="50dp">

        <RadioGroup
            android:id="@+id/systemConditioningMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <RadioButton
                android:id="@+id/systemOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Off"
                android:textSize="@dimen/text_large_xlarge" />

            <RadioButton
                android:id="@+id/systemAuto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Auto"
                android:textSize="@dimen/text_large_xlarge" />

            <RadioButton
                android:id="@+id/systemManualCool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Cool Only"
                android:textSize="@dimen/text_large_xlarge" />

            <RadioButton
                android:id="@+id/systemManualHeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Heat Only"
                android:textSize="@dimen/text_large_xlarge" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="Equipment Status"
                android:textColor="#202020"
                android:textSize="@dimen/text_medium_xlarge" />

            <EditText
                android:id="@+id/stageStatusNow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="16dp"
                android:clickable="false"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="left"
                android:paddingLeft="8dp"
                android:text="In Cooling now. Cooling Stage 1(on)/ 2(off) Heating Stage 1(On)/2(off)"
                android:textColor="#202020"
                android:textSize="@dimen/text_small_xlarge"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="Economy"
                android:textSize="@dimen/text_medium_xlarge" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Comfort"
                android:textSize="@dimen/text_medium_xlarge" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <SeekBar
                android:id="@+id/systemComfortValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="TargetMinInsideHumidity"
            android:textSize="@dimen/text_medium_xlarge"/>

        <Spinner
            android:id="@+id/targetMinInsideHumidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="TargetMaxInsideHumidity"
            android:textSize="@dimen/text_medium_xlarge"/>

        <Spinner
            android:id="@+id/targetMaxInsideHumidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"/>
        </LinearLayout>

        <CheckBox
            android:id="@+id/cbCompHumidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Compensate for Humidity"
            android:textSize="@dimen/text_medium_xlarge" />

        <CheckBox
            android:id="@+id/cbDemandResponse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Demand Response Mode"
            android:textSize="@dimen/text_medium_xlarge" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="38dp"
        android:layout_marginTop="30dp"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/sysSchTv"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Schedule"
                android:textSize="@dimen/text_large_xlarge" />

            <Spinner
                android:id="@+id/sysSpinnerSchedule"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:layout_width="324dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/sysScheduleEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:padding="8dp"
                android:src="@drawable/content_edit" />
        </LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <!--<TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status  "
                android:textSize="@dimen/text_large_xlarge"
                android:visibility="gone" />-->

            <TextView
                android:id="@+id/sysSchTv"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Occupancy Status"
                android:textColor="#202020"
                android:textSize="@dimen/text_medium_xlarge" />

            <TextView
                android:id="@+id/systemSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_weight="1"
                android:clickable="false"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="left"
                android:paddingLeft="8dp"
                android:text="65F Now. Changes to 82F at 18:00"
                android:textSize="@dimen/text_small_xlarge" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Vacation"
                android:textSize="@dimen/text_large_xlarge" />

            <EditText
                android:id="@+id/systemVacationFromTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_weight="1"
                android:clickable="true"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:gravity="left"
                android:inputType="textNoSuggestions"
                android:paddingLeft="7dp"
                android:text="From 03/03/12 To 04/04/12"
                android:textSize="@dimen/text_small_xlarge" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/systemDrModeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:visibility="gone">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="DR Mode"
                android:textSize="@dimen/text_large_xlarge"/>
            <android.support.v7.widget.SwitchCompat
                android:id="@+id/systemDrModeSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:gravity="left"
                android:textOff="OFF"
                android:textOn="ON" />

        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/sysScheduleSummaryTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Schedule:"
                    android:textSize="@dimen/text_medium_xlarge" />

                <TextView
                    android:id="@+id/sysScheduleDetailTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=""
                    android:textSize="@dimen/text_medium_xlarge" />

                <GridLayout
                    android:id="@+id/sysScheduleGrid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:columnCount="2"
                    android:rowCount="7">

                    <TextView
                        android:id="@+id/mondayLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="left"
                        android:layout_row="0"
                        android:text="Monday"
                        android:textSize="@dimen/text_small_xlarge" />


                    <TextView
                        android:id="@+id/tuesdayLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_row="1"
                        android:text="Tuesday"
                        android:textSize="@dimen/text_small_xlarge" />

                    <TextView
                        android:id="@+id/wednesdayLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_row="2"
                        android:text="Wednesday  "
                        android:textSize="@dimen/text_small_xlarge" />

                    <TextView
                        android:id="@+id/thursdayLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_row="3"
                        android:text="Thursday"
                        android:textSize="@dimen/text_small_xlarge" />

                    <TextView
                        android:id="@+id/fridayLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_row="4"
                        android:text="Friday"
                        android:textSize="@dimen/text_small_xlarge" />

                    <TextView
                        android:id="@+id/saturdayLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_row="5"
                        android:text="Saturday"
                        android:textSize="@dimen/text_small_xlarge" />

                    <TextView
                        android:id="@+id/sundayLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_row="6"
                        android:text="Sunday"
                        android:textSize="@dimen/text_small_xlarge" />

                    <TextView
                        android:id="@+id/monday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_gravity="left"
                        android:layout_row="0"
                        android:text="Medium Text"
                        android:textSize="@dimen/text_small_xlarge" />


                    <TextView
                        android:id="@+id/tuesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_row="1"
                        android:text="Medium Text"
                        android:textSize="@dimen/text_small_xlarge" />

                    <TextView
                        android:id="@+id/wednesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_row="2"
                        android:text="Medium Text"
                        android:textSize="@dimen/text_small_xlarge" />

                    <TextView
                        android:id="@+id/thursday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_row="3"
                        android:text="Medium Text"
                        android:textSize="@dimen/text_small_xlarge" />

                    <TextView
                        android:id="@+id/friday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_row="4"
                        android:text="Medium Text"
                        android:textSize="@dimen/text_small_xlarge" />

                    <TextView
                        android:id="@+id/saturday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_row="5"
                        android:text="Medium Text"
                        android:textSize="@dimen/text_small_xlarge" />

                    <TextView
                        android:id="@+id/sunday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_row="6"
                        android:text="Medium Text"
                        android:textSize="@dimen/text_small_xlarge" />
                </GridLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>