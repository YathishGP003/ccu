<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layoutConnectWifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="79dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageGoback"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="64dp"
            android:padding="2.5dp"
            android:rotation="180"
            android:visibility="gone"
            app:srcCompat="@drawable/icon_arrowright" />

        <TextView
            android:id="@+id/textConnectWifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="310dp"
            android:fontFamily="@font/lato_bold"
            android:text="@string/connectwifi"
            android:textAllCaps="true"
            android:textColor="@color/orange_75f"
            android:textSize="33.5dp"
            android:textStyle="bold"
            android:visibility="gone" />


        <ToggleButton
            android:id="@+id/toggleWifi"
            android:layout_width="47dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="106dp"
            android:background="@drawable/toggle_selector"
            android:checked="false"
            android:textOff=""
            android:textOn="" />

        <ImageView
            android:id="@+id/imageRefresh"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="54dp"
            app:srcCompat="@drawable/ic_refresh" />

    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerWifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="64dp"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constrainedHeight="true"
        app:layout_constraintHeight_max="430dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/layoutConnectWifi" />

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:theme="@style/SwitchTheme"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/recyclerWifi"
        app:layout_constraintStart_toStartOf="@+id/recyclerWifi"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_turnon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/msg_turnonwifi"
        android:textColor="@color/hint_textcolor"
        android:textSize="19.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>