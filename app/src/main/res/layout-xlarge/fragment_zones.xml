<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/floorMenu"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:padding="6dp"
            android:clickable="true"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_floormenu"
            android:tint="@color/orange_75f"
            android:visibility="gone"
            android:adjustViewBounds="true"/>

        <RelativeLayout
            android:id="@+id/weather_data"
            android:layout_width="264dp"
            android:layout_height="374dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@color/accent"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            >

            <TextView
                android:id="@+id/place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Mankato,Mn"
                android:textColor="@color/white"
                android:textAppearance="@style/title_white_bold" />

            <ImageView
                android:id="@+id/weather_icon"
                android:layout_width="106dp"
                android:layout_height="77dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="110dp"
                android:src="@drawable/snow" />

            <TextView
                android:id="@+id/temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/weather_icon"
                android:layout_alignParentRight="true"
                android:layout_marginRight="72dp"
                android:text="71"
                android:textColor="@color/white"
                android:textSize="93sp"
                android:fontFamily="@font/lato_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/temperature"
                android:layout_alignParentRight="true"
                android:layout_marginRight="45dp"
                android:layout_below="@+id/weather_icon"
                android:drawableLeft="@drawable/degree"
                android:text="F"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/lato_light" />

            <TextView
                android:id="@+id/weather_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/place"
                android:layout_below="@+id/place"
                android:text="Sunny"
                android:textColor="@color/white"
                android:textSize="19.5sp"
                android:fontFamily="@font/lato_light"/>

            <TextView
                android:id="@+id/maxmintemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/temperature"
                android:layout_alignTop="@+id/temperature"
                android:layout_alignBottom="@+id/temperature"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:text="77\n63"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:fontFamily="@font/lato_light"/>

            <TextView
                android:id="@+id/note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignLeft="@id/temperature"
                android:layout_below="@+id/maxmintemp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="27dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="Humid and warmer with times of sun and clouds . "
                android:textColor="@color/white"
                android:textSize="19sp" />


        </RelativeLayout>

        <ScrollView
            android:id="@+id/scrollView_zones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/weather_data">
            <RelativeLayout
                android:id="@+id/zone_fragment_temp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TableLayout
                    android:id="@+id/tableRoot"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="260dp">

                </TableLayout>
                <GridLayout
                    android:id="@+id/gridview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:columnCount="4"
                    android:visibility="gone"
                    android:background="@android:color/background_light" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerEquip"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"/>

                <ExpandableListView
                    android:id="@+id/expandableListView"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
                    android:divider="@android:color/darker_gray"
                    android:dividerHeight="0.5dp"
                    android:visibility="gone"/>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/drawer_screen"
        android:layout_width="275dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical">

        <ListView
            android:id="@+id/floorList"
            android:layout_width="275dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:choiceMode="singleChoice"
            android:overScrollMode="never"
            android:dividerHeight="0dp"
            android:background="@color/bg_header"
            />
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>