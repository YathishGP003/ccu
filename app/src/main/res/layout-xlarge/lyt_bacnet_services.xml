<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_60"
        android:layout_marginTop="@dimen/margin_24"
        android:layout_marginEnd="@dimen/margin_85"
        android:layout_marginBottom="@dimen/margin_24">

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/global_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:textSize="@dimen/sp_20"
                android:text="@string/txt_global"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <CheckBox
                android:id="@+id/cb_global"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <Spinner
            android:layout_below="@+id/global_container"
            android:paddingRight="30dp"
            style="@style/customSpinnerDownArrow"
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_5"
            android:paddingTop="@dimen/margin_20"
            android:paddingBottom="@dimen/margin_5"
            />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/container_property_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/spinner"
            android:layout_marginTop="@dimen/margin_30"
            />
    </RelativeLayout>


</androidx.core.widget.NestedScrollView>