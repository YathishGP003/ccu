<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="30dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:layout_marginTop="20dp"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:text="MONDAY"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:layout_marginTop="20dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:text="Occupied"
                android:textColor="#FA8733"/>

        </LinearLayout>


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/desired_temperature"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:fontFamily="@font/lato_bold"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_marginStart="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/heating_desired"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/lato_bold"
                android:textSize="20sp"
                android:textColor="@color/selection_gray"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cooling_desired"
                android:layout_marginTop="10dp"
                android:layout_marginStart="100dp"
                android:fontFamily="@font/lato_bold"
                android:textSize="20sp"
                android:textColor="@color/selection_gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp">
            <TextView
                android:id="@+id/heatingDesired"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="70"
                android:fontFamily="@font/lato_bold"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/coolingDesired"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="74"
                android:layout_marginStart="340dp"
                android:fontFamily="@font/lato_bold"
                android:textSize="20sp" />
        </LinearLayout>









        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_limits"
            android:textColor="@color/white"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/lato_bold"
            android:textSize="20sp"

            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_marginStart="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/heating_user_limit_min_max"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/lato_bold"
                android:textSize="20sp"
                android:textColor="@color/selection_gray"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cooling_user_limit_min_max"
                android:layout_marginTop="10dp"
                android:layout_marginStart="100dp"
                android:fontFamily="@font/lato_bold"
                android:textSize="20sp"
                android:textColor="@color/selection_gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp">
            <TextView
                android:id="@+id/heatingUserLimit"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text="70 / 78"
                android:fontFamily="@font/lato_bold"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/coolingUserLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="74"
                android:layout_marginStart="300dp"
                android:fontFamily="@font/lato_bold"
                android:textSize="20sp" />
        </LinearLayout>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deadbands"
            android:textColor="@color/white"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/lato_bold"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_marginStart="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/heating_deadband"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/lato_bold"
                android:textSize="20sp"
                android:textColor="@color/selection_gray"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cooling_deadband"
                android:layout_marginTop="10dp"
                android:layout_marginStart="180dp"
                android:fontFamily="@font/lato_bold"
                android:textSize="20sp"
                android:textColor="@color/selection_gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp">
            <TextView
                android:id="@+id/heatingDeadband"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="70"
                android:fontFamily="@font/lato_bold"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/coolingDeadband"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="74"
                android:layout_marginStart="340dp"
                android:fontFamily="@font/lato_bold"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>