                     android:textSize="@dimen/text_medium_xlarge"/>

                 <TextView
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="60dp"
                     android:layout_marginRight="30dp"
                     android:layout_weight="0.1"
                     android:layout_width="match_parent"
                     android:text="Controls dampers in ductwork to provide zone by zone airflow control"
                     android:textSize="@dimen/text_small_xlarge"/>


                 <RadioButton
                     android:id="@+id/lcmModuleTypeRB"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="25dp"
                     android:layout_weight="0.1"
                     android:layout_width="wrap_content"
                     android:text=" Lighting Control"
                     android:textSize="@dimen/text_medium_xlarge"/>

                 <TextView
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="60dp"
                     android:layout_marginRight="30dp"
                     android:layout_weight="0.1"
                     android:layout_width="match_parent"
                     android:text="Controls 2 independent zones via relays and 2 variable light units via 0-10v output."
                     android:textSize="@dimen/text_small_xlarge"/>

                 <RadioButton
                     android:id="@+id/piModuleTypeRB"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="12dp"
                     android:layout_weight="0.1"
                     android:layout_width="match_parent"
                     android:text=" PI Loop Controller"
                     android:textSize="@dimen/text_medium_xlarge"/>

                 <TextView
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="60dp"
                     android:layout_marginRight="30dp"
                     android:layout_weight="0.1"
                     android:layout_width="match_parent"
                     android:text="Generic PI control for range of applications with sensors connected via analog inputs"
                     android:textSize="@dimen/text_small_xlarge"/>

                 <RadioButton
                     android:id="@+id/sseModuleTypeRB"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="25dp"
                     android:layout_weight="0.1"
                     android:layout_width="match_parent"
