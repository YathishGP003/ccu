<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:max="100"
        android:backgroundTint="@color/white"
        android:layout_gravity="bottom"
        android:indeterminateTint="@color/accent"
        android:layout_marginTop="-7dp"/>

    <EditText
        android:id="@+id/ccu_name_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="CCU Name" />


    <EditText
        android:id="@+id/installer_email_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:inputType="textEmailAddress"
        android:hint="Installer Email" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:textSize="16sp"
        android:text="Select SmartNode Address Band"/>
    <Spinner
        android:id="@+id/addressBandSpinner"
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:spinnerMode="dropdown"/>

    <Button
        android:id="@+id/create_new"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/accent"
        android:textColor="@color/white"
        android:text="Create New" />

    <TextView
        android:id="@+id/or_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="OR"
        android:visibility="gone" />

    <Button
        android:id="@+id/use_existing_ccu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Use Existing CCU"
        android:visibility="gone" />


</LinearLayout>