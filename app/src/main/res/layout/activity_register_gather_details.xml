<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp">



    <EditText
        android:id="@+id/site_id_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a site ID or select next" />
    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:max="100"
        android:backgroundTint="@color/white"
        android:layout_gravity="bottom"
        android:indeterminateTint="#1a09d6"
        android:visibility="invisible"
        android:layout_marginTop="-7dp"/>



    <Button
        android:id="@+id/use_existing_site_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Use existing Site ID" />

    <TextView
        android:id="@+id/or_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="or" />

    <Button
        android:id="@+id/no_site_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter a new site" />
</LinearLayout>
