<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="?attr/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/floorMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_floormenu" />

        <ImageView
            android:id="@+id/menuToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_menu" />

        <!--<ImageView
            android:id="@+id/logo_daikin"
            android:layout_width="wrap_content"
            android:layout_height="?actionBarSize"
            android:layout_marginStart="16dp"
            android:padding="8dp"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_daikin_logo" />-->

        <!-- <ImageView
             android:id="@+id/logo_75f"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginStart="16dp"
             android:padding="8dp"
             android:scaleType="center"
             android:layout_gravity="center_vertical"
             app:srcCompat="@drawable/ic_75f_logo" />-->
        <ImageView
            android:id="@+id/logo_75f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:padding="@dimen/margin_20"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:scaleType="center"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_daikin_logo" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            style="?RenatusLandingTabStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:tabGravity="fill"
            android:layout_marginStart="12dp"
            app:tabIndicator="?orange_75f"
            app:tabIndicatorHeight="6dp"
            app:tabMode="fixed" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!--<ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_gravity="center"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_powered_by_75f" />-->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="8dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_powered_by_75f" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/btnTabs"
            style="?RenatusTabStyle"
            android:layout_width="140dp"
            android:layout_height="?actionBarSize"
            app:tabBackground = "@null"
            app:tabRippleColor="@null"
            app:tabIndicator="?orange_75f"
            app:tabIndicatorHeight="6dp"
            app:tabMaxWidth="70dp"
            app:tabGravity="fill"
            app:tabMode="fixed">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/pageSettingButton"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:icon="@drawable/ic_settings_orange"
                android:padding="8dp" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/pageDashBoardButton"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:icon="@drawable/ic_tachometer"
                android:padding="8dp" />
        </com.google.android.material.tabs.TabLayout>
    </LinearLayout>


    <a75f.io.renatus.registration.CustomViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</LinearLayout>
