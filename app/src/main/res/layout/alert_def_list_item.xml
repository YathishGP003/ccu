<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_marginTop="8dp"
   android:layout_marginStart="16dp"
   android:layout_marginEnd="16dp"
   android:layout_width="match_parent"
   android:layout_height="34sp">

   <TextView
      android:id="@+id/titleText"
      android:layout_width="300sp"
      android:layout_height="wrap_content"
      android:maxLines="1"
      android:ellipsize="end"
      tools:text="BATTERY LEVEL LOW FATAL"
      android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
      android:textColor="@color/black"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

   <TextView
      android:id="@+id/severityText"
      android:layout_width="100sp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8sp"
      android:singleLine="true"
      android:ellipsize="end"
      tools:text="Warning"
      android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
      app:layout_constraintStart_toEndOf="@+id/titleText"
      app:layout_constraintTop_toTopOf="@+id/titleText"
      app:layout_constraintBottom_toBottomOf="@+id/titleText"
      />

   <TextView
      android:id="@+id/stateText"
      android:layout_width="180sp"
      android:layout_height="wrap_content"
      tools:text="Cond met: 2 of 15 min"
      android:ellipsize="end"
      android:singleLine="true"
      android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
      android:gravity="center"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@+id/titleText"
      app:layout_constraintBottom_toBottomOf="@+id/titleText"
      />

   <!--   The placement of this view is a bit hack, using its margins against the parents to position it
          correctly between the other columns.  Overall this view won't scale well.  Redo using %'s for column widths. -->
   <TextView
      android:id="@+id/conditionalText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="422sp"
      android:layout_marginEnd="184sp"
      android:maxLines="2"
      android:ellipsize="end"
      android:singleLine="false"
      tools:text="{1: password and attempt >= 3 (security)} Some really really long text please wrap"
      android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@+id/titleText"
      app:layout_constraintBottom_toBottomOf="@+id/titleText"
      />

</androidx.constraintlayout.widget.ConstraintLayout>
