<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_property_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="22dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/titleLabel"
                style="@style/text_header_alert_defs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/alert_definitions"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/definitionCount"
                style="@style/text_log_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/titleLabel"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="20" />

            <TextView
                android:id="@+id/titleLabel2"
                style="@style/text_log_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:text="@string/active_alerts"
                android:textAllCaps="true"
                app:layout_constraintStart_toEndOf="@id/definitionCount"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/activeCount"
                style="@style/text_log_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/titleLabel2"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="0" />

            <TextView
                android:id="@+id/titleLabel3"
                style="@style/text_log_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/resolved"
                android:textAllCaps="true"
                app:layout_constraintStart_toEndOf="@id/definitionCount"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/resolvedCount"
                style="@style/text_log_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/titleLabel2"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="0" />

            <TextView
                android:id="@+id/titleLabel4"
                style="@style/text_log_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/in_process"
                android:textAllCaps="true"
                app:layout_constraintStart_toEndOf="@id/definitionCount"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/inProcessCount"
                style="@style/text_log_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/titleLabel2"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/refreshButton"
                    style="@style/text_header_log"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/margin_40"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:text="@string/refresh"
                    android:textAllCaps="true"
                    android:textColor="?orange_75f" />
            </LinearLayout>
        </LinearLayout>

        <!--   style="@style/Widget.AppCompat.Button.Borderless"-->

        <include
            layout="@layout/alert_def_list_header"
            android:paddingTop="16dp"
            android:paddingBottom="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/alertDefsListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintTop_toBottomOf="@id/definitionCount"
            tools:listitem="@layout/alert_def_list_item" />
    </LinearLayout>
</FrameLayout>

