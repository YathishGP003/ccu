<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="13dp"
    android:background="@color/tuner_header_bg"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:paddingStart="12dp"
            android:id="@+id/tv_type"
            style="@style/text_log_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:gravity="center"
            android:paddingTop="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_16"
            android:text="Type" />

        <ImageView
            android:id="@+id/iv_sort_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/img_sort" />


    </LinearLayout>

    <View
        android:id="@+id/divider_type"
        android:layout_width="1dp"
        android:layout_height="18dp"
        android:layout_gravity="center_vertical"
        android:background="@color/listview_divider_color" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_timestamp"
            style="@style/text_log_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_16"
            android:text="Timestamp" />

        <ImageView
            android:id="@+id/iv_sort_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/img_sort" />


    </LinearLayout>

    <View
        android:id="@+id/divider_timestamp"
        android:layout_width="1dp"
        android:layout_height="18dp"
        android:layout_gravity="center_vertical"
        android:background="@color/listview_divider_color" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_expire_at"
            style="@style/text_log_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_16"
            android:text="Expire At" />

        <ImageView
            android:id="@+id/iv_sort_expire_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/img_sort" />


    </LinearLayout>

    <View
        android:id="@+id/divider_expire_at"
        android:layout_width="1dp"
        android:layout_height="18dp"
        android:layout_gravity="center_vertical"
        android:background="@color/listview_divider_color" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_operation"
            style="@style/text_log_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_16"
            android:text="Operation" />

        <ImageView
            android:id="@+id/iv_sort_operation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/img_sort" />


    </LinearLayout>

    <View
        android:id="@+id/divider_operation"
        android:layout_width="1dp"
        android:layout_height="18dp"
        android:layout_gravity="center_vertical"
        android:background="@color/listview_divider_color" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_message"
            style="@style/text_log_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_16"
            android:text="Message" />

        <ImageView
            android:id="@+id/iv_sort_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/img_sort" />


    </LinearLayout>

    <View
        android:id="@+id/divider_message"
        android:layout_width="1dp"
        android:layout_height="18dp"
        android:layout_gravity="center_vertical"
        android:background="@color/listview_divider_color" />

    <TextView
        android:id="@+id/tv_result"
        style="@style/text_log_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:gravity="center"
        android:paddingTop="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_16"
        android:text="Result" />
</LinearLayout>
