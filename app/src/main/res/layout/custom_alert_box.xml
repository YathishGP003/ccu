<!-- res/layout/activity_main.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="40dp"
    android:paddingBottom="20dp"
    android:paddingEnd="24dp"
    android:paddingStart="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:id="@+id/title_layout"
        >
        <ImageView
            android:id="@+id/icon"
            android:layout_width="36dp"
            android:layout_height="33dp"
            android:src="@drawable/ic_dialog_alert"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textColor="@color/secondary"
            android:text="Zone Schedule is outside Building Occupancy"
            android:fontFamily="@font/lato_bold"
            android:textSize="24sp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary"
        android:text="Force trim will erase the following time slot(s) of Weekday + Saturday + Sunday schedule group. Are you sure you want to proceed?"
        android:textSize="20sp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:gravity="end">

        <Button
            android:id="@+id/negative_button"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="Cancel"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:background="#0FFF"
            android:textColor="?orange_75f" />

        <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="22dp"
            android:background="@android:color/darker_gray"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

        <Button
            android:id="@+id/positive_button"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="Force-Trim and Save"
            android:textSize="20dp"
            android:background="#0FFF"
            android:textColor="?orange_75f" />

    </LinearLayout>
</LinearLayout>
