<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:padding="16sp">

        <TextView
            android:id="@+id/textView_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apply_tuner"
            android:textAppearance="@style/tuner_text_title_black" />

        <TextView
            android:id="@+id/textView_confirmMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5dp"
            android:text="@string/confirm_tuner"
            android:textAppearance="@style/tuner_text_label_black" />

        <LinearLayout
            android:id="@+id/layoutBuilding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_BuildingLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|left"
                android:text="Building:"
                android:textAppearance="@style/tuner_text_group" />

            <TextView
                android:id="@+id/textView_Building"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="10sp"
                android:gravity="center_vertical|left"
                android:text=""
                android:textAppearance="@style/tuner_button_save" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/layoutConfirmBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <View
        android:id="@+id/horizontalDivider"
        android:layout_width="match_parent"
        android:layout_height="0.05sp"
        android:layout_margin="10sp"
        android:alpha="0.75"
        android:background="@color/light_gray" />

    <LinearLayout
        android:id="@+id/layoutFooterButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonCancelTuner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:background="@null"
            android:fontFamily="@font/lato_regular"
            android:gravity="center_vertical|center_horizontal"
            android:padding="5sp"
            android:text="@string/cancel"
            android:textColor="?orange_75f"
            android:textSize="19.5sp" />

        <View
            android:id="@+id/tunerDivider"
            android:layout_width="0.5sp"
            android:layout_height="25sp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@color/light_gray" />

        <Button
            android:id="@+id/buttonApplyTuner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:background="@null"
            android:fontFamily="@font/lato_regular"
            android:gravity="center_vertical|center_horizontal"
            android:padding="5sp"
            android:text="@string/button_apply"
            android:textColor="?orange_75f"
            android:textSize="19.5sp" />
    </LinearLayout>
</LinearLayout>