<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/layoutCreateNewSite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageGoback"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="64dp"
            android:padding="2.5dp"
            android:rotation="180"
            app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24"
            app:tint="?orange_75f" />

        <TextView
            android:id="@+id/textAddCCU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/lato_bold"
            android:text="@string/installaddccu"
            android:textAllCaps="true"
            android:textColor="?orange_75f"
            android:textSize="33.5sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/rlFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="62dp"
            android:layout_marginEnd="78dp"
            android:scrollbars="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/label_passcode_Generate"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="8dp"/>
            <LinearLayout
                android:layout_marginTop="@dimen/margin_right_otp"
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="8dp">

                <EditText
                    android:id="@+id/otp_edit_text1"
                    android:layout_width="@dimen/et_otp_width"
                    android:layout_height="@dimen/et_otp_height"
                    android:layout_marginEnd="@dimen/margin_right_otp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/otp_edit_text2"
                    android:layout_width="@dimen/et_otp_width"
                    android:layout_height="@dimen/et_otp_height"
                    android:layout_marginEnd="@dimen/margin_right_otp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/otp_edit_text3"
                    android:layout_width="@dimen/et_otp_width"
                    android:layout_height="@dimen/et_otp_height"
                    android:layout_marginEnd="@dimen/margin_right_otp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/otp_edit_text4"
                    android:layout_width="@dimen/et_otp_width"
                    android:layout_height="@dimen/et_otp_height"
                    android:layout_marginEnd="@dimen/margin_right_otp"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/otp_edit_text5"
                    android:layout_width="@dimen/et_otp_width"
                    android:layout_height="@dimen/et_otp_height"
                    android:layout_marginEnd="@dimen/margin_right_otp"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/otp_edit_text6"
                    android:layout_width="@dimen/et_otp_width"
                    android:layout_height="@dimen/et_otp_height"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!--<com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputSiteID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorTextAppearance="?error_appearance">

                <EditText
                    android:id="@+id/editSiteID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="start|center_vertical"
                    android:hint="@string/hint_siteid"
                    android:maxLength="40"
                    android:singleLine="true"
                    android:textColor="@color/input_textcolor"
                    android:textSize="19.5sp" />
            </com.google.android.material.textfield.TextInputLayout>-->

            <Button
                android:id="@+id/buttonNext1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textInputSiteID"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"
                android:background="@null"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:drawablePadding="5dp"
                android:fontFamily="@font/lato_bold"
                android:text="@string/button_next"
                android:textColor="?orange_75f"
                android:textSize="24sp"
                android:enabled="false"/>

            <ProgressBar
                android:id="@+id/progressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buttonNext1"
                android:layout_gravity="bottom"
                android:layout_marginTop="-7dp"
                android:backgroundTint="@color/white"
                android:indeterminate="true"
                android:indeterminateTint="?orange_75f"
                android:max="100"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textViewList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buttonNext1"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="198dp"
                android:fontFamily="@font/lato_bold"
                android:text="@string/title_viewlist"
                android:textAllCaps="true"
                android:textColor="?orange_75f"
                android:textSize="33.5sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewList"
                android:layout_marginTop="84dp"
                android:visibility="gone"
                app:errorTextAppearance="?error_appearance">

                <EditText
                    android:id="@+id/editFacilityEmail"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="start|center_vertical"
                    android:hint="@string/input_facilityemail"
                    android:inputType="textWebEmailAddress"
                    android:singleLine="true"
                    android:textColor="@color/input_textcolor"
                    android:textSize="19.5sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textInputEmail"
                android:layout_marginTop="-9dp"
                android:visibility="gone"
                app:errorTextAppearance="?error_appearance">

                <EditText
                    android:id="@+id/editFacilityPass"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="start|center_vertical"
                    android:hint="@string/hint_password"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/input_textcolor"
                    android:textSize="19.5sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/buttonNext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textInputPassword"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="32dp"
                android:background="@null"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:drawablePadding="5dp"
                android:fontFamily="@font/lato_bold"
                android:text="@string/button_next"
                android:textColor="?orange_75f"
                android:textSize="24sp"
                android:visibility="gone" />

        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>