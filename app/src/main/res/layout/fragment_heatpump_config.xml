<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_dialog"
    android:elevation="12dp">


    <TextView
        android:id="@+id/textHeatPump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/lato_bold"
        android:text="@string/heat_pump_unit"
        android:textAllCaps="true"
        android:textColor="?orange_75f"
        android:textSize="33.5dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textHeatPump"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:id="@+id/rlPassFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/textEnable"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginLeft="282dp"
                android:alpha="0.6"
                android:fontFamily="@font/lato_regular"
                android:text="@string/title_enable"
                android:textColor="@color/black"
                android:textSize="19.5dp" />


            <TextView
                android:id="@+id/textTestSignal"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginLeft="284dp"
                android:layout_toRightOf="@+id/textEnable"
                android:alpha="0.6"
                android:fontFamily="@font/lato_regular"
                android:text="@string/title_testsignal"
                android:textColor="@color/black"
                android:textSize="19.5dp" />

            <TextView
                android:id="@+id/textTempOffset"
                android:layout_width="137dp"
                android:layout_height="24dp"
                android:layout_marginLeft="145dp"
                android:layout_toRightOf="@+id/textTestSignal"
                android:alpha="0.6"
                android:fontFamily="@font/lato_regular"
                android:text="@string/title_offset"
                android:textColor="@color/black"
                android:textSize="19.5dp" />


            <NumberPicker
                android:id="@+id/temperatureOffset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textTempOffset"
                android:layout_alignLeft="@+id/textTempOffset"
                android:layout_alignRight="@+id/textTempOffset"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="25dp"
                android:gravity="center_vertical|center_horizontal"
                android:minWidth="77dp"
                android:theme="?DefaultNumberPickerTheme" />

            <ImageView
                android:id="@+id/imageHPInput"
                android:layout_width="250dp"
                android:layout_height="630dp"
                android:layout_below="@+id/textEnable"
                android:layout_marginTop="32dp"
                android:src="@drawable/input_heatpump1" />

            <LinearLayout
                android:id="@+id/lt_toggles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textEnable"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/imageHPInput"
                android:orientation="vertical">

                <ToggleButton
                    android:id="@+id/toggleComStage1"
                    android:layout_width="46.12dp"
                    android:layout_height="27.42dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/toggle_selector"
                    android:checked="false"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/toggleComStage2"
                    android:layout_width="46.12dp"
                    android:layout_height="27.42dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/toggle_selector"
                    android:checked="false"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/toggleFanLow"
                    android:layout_width="46.12dp"
                    android:layout_height="27.42dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="36.5dp"
                    android:background="@drawable/toggle_selector"
                    android:checked="false"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/toggleAuxHeat"
                    android:layout_width="46.12dp"
                    android:layout_height="27.42dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/toggle_selector"
                    android:checked="false"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/toggleFanHigh"
                    android:layout_width="46.12dp"
                    android:layout_height="27.42dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/toggle_selector"
                    android:checked="false"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/toggleHeatPump"
                    android:layout_width="46.12dp"
                    android:layout_height="27.42dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/toggle_selector"
                    android:checked="false"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/toggleAirflow"
                    android:layout_width="46.12dp"
                    android:layout_height="27.42dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="107dp"
                    android:background="@drawable/toggle_selector"
                    android:checked="false"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/toogleExtSensor"
                    android:layout_width="46.12dp"
                    android:layout_height="27.42dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/toggle_selector"
                    android:checked="false"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/toggleOccupancy"
                    android:layout_width="46.12dp"
                    android:layout_height="27.42dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/toggle_selector"
                    android:checked="false"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lt_enableLabel"
                android:layout_width="291dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textEnable"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/lt_toggles"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textCompStage1"
                    android:layout_width="wrap_content"
                    android:layout_height="28.5dp"
                    android:text="@string/label_compstage1"
                    android:textAppearance="@style/text_appearance" />

                <TextView
                    android:id="@+id/textCompStage2"
                    android:layout_width="wrap_content"
                    android:layout_height="28.5dp"
                    android:layout_marginTop="32dp"
                    android:text="@string/label_compstage2"
                    android:textAppearance="@style/text_appearance" />

                <TextView
                    android:id="@+id/textFanLow"
                    android:layout_width="wrap_content"
                    android:layout_height="28.5dp"
                    android:layout_marginTop="33.5dp"
                    android:text="@string/label_fanlow"
                    android:textAppearance="@style/text_appearance" />

                <TextView
                    android:id="@+id/textAuxHeat"
                    android:layout_width="195dp"
                    android:layout_height="28.5dp"
                    android:layout_marginTop="32dp"
                    android:text="@string/label_auxheat"
                    android:textAppearance="@style/text_appearance" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinnerFanHigh"
                    android:layout_width="224dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="42dp"
                    android:entries="@array/smartstat_relay_fanHumiD"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:id="@+id/textHeatChangeover"
                    android:layout_width="wrap_content"
                    android:layout_height="28.5dp"
                    android:layout_marginTop="32dp"
                    android:text="@string/label_pumpchange"
                    android:textAppearance="@style/text_appearance" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinnerPumpChange"
                    android:layout_width="224dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="42dp"
                    android:entries="@array/smartstat_relay_hp_changeover"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:id="@+id/textAirflow"
                    android:layout_width="wrap_content"
                    android:layout_height="28.5dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/label_airflowtemp"
                    android:textAppearance="@style/text_appearance" />

                <TextView
                    android:id="@+id/textOccupancy"
                    android:layout_width="wrap_content"
                    android:layout_height="28.5dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/label_extsensor"
                    android:textAppearance="@style/text_appearance" />

                <TextView
                    android:id="@+id/textExtSensor"
                    android:layout_width="wrap_content"
                    android:layout_height="28.5dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/label_enableoccup"
                    android:textAppearance="@style/text_appearance" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/lt_testSignal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textEnable"
                android:layout_alignLeft="@+id/textTestSignal"
                android:layout_alignRight="@+id/textTestSignal"
                android:layout_marginTop="23dp"
                android:orientation="vertical">

                <ToggleButton
                    android:id="@+id/testHpuRelay1"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/toggle_testselector"
                    android:checked="false"
                    android:textAppearance="@style/text_toggleappearance"
                    android:textColor="@drawable/toggle_textselector"
                    android:textOff="OFF"
                    android:textOn="ON" />

                <ToggleButton
                    android:id="@+id/testHpuRelay2"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/toggle_testselector"
                    android:checked="false"
                    android:textAppearance="@style/text_toggleappearance"
                    android:textColor="@drawable/toggle_textselector"
                    android:textOff="OFF"
                    android:textOn="ON" />

                <ToggleButton
                    android:id="@+id/testHpuRelay3"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/toggle_testselector"
                    android:checked="false"
                    android:textAppearance="@style/text_toggleappearance"
                    android:textColor="@drawable/toggle_textselector"
                    android:textOff="OFF"
                    android:textOn="ON" />

                <ToggleButton
                    android:id="@+id/testHpuRelay4"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/toggle_testselector"
                    android:checked="false"
                    android:textAppearance="@style/text_toggleappearance"
                    android:textColor="@drawable/toggle_textselector"
                    android:textOff="OFF"
                    android:textOn="ON" />

                <ToggleButton
                    android:id="@+id/testHpuRelay5"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/toggle_testselector"
                    android:checked="false"
                    android:textAppearance="@style/text_toggleappearance"
                    android:textColor="@drawable/toggle_textselector"
                    android:textOff="OFF"
                    android:textOn="ON" />

                <ToggleButton
                    android:id="@+id/testHpuRelay6"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/toggle_testselector"
                    android:checked="false"
                    android:textAppearance="@style/text_toggleappearance"
                    android:textColor="@drawable/toggle_textselector"
                    android:textOff="OFF"
                    android:textOn="ON" />
            </LinearLayout>

            <Button
                android:id="@+id/set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="95dp"
                android:background="@null"
                android:button="@null"
                android:fontFamily="@font/lato_regular"
                android:text="@string/button_set"
                android:textAllCaps="true"
                android:textColor="?orange_75f"
                android:textSize="19.5dp" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>