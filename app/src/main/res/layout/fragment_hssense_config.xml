<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/border_dialog"
    android:elevation="12dp">


    <TextView
        android:id="@+id/textHSS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/lato_bold"
        android:text="SENSE"
        android:textAllCaps="true"
        android:textColor="@color/orange_75f"
        android:textSize="33.5dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textHSS"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="20dp">

        <RelativeLayout
            android:id="@+id/rlsenseFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/tempoffset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="480dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textTempOffset"
                    android:layout_width="137dp"
                    android:layout_height="24dp"
                    android:alpha="0.6"
                    android:fontFamily="@font/lato_regular"
                    android:text="@string/title_offset"
                    android:textColor="@color/black"
                    android:textSize="20dp" />


                <NumberPicker
                    android:id="@+id/temperatureOffset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#202020"
                    android:textSize="30sp"
                    android:theme="@style/DefaultNumberPickerTheme"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@id/input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tempoffset"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp">

                <ImageView
                    android:id="@+id/imageHPInput"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/hyperstatsenseinput" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">
                    <ToggleButton
                        android:id="@+id/th1"
                        android:layout_width="46.12dp"
                        android:layout_height="27.42dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/toggle_selector"
                        android:checked="false"
                        android:textOff=""
                        android:textOn=""
                        />
                    <ToggleButton
                        android:id="@+id/th2"
                        android:layout_width="46.12dp"
                        android:layout_height="27.42dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/toggle_selector"
                        android:checked="false"
                        android:textOff=""
                        android:textOn=""/>
                    <ToggleButton
                        android:id="@+id/anlg1"
                        android:layout_width="46.12dp"
                        android:layout_height="27.42dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="70dp"
                        android:background="@drawable/toggle_selector"
                        android:checked="false"
                        android:textOff=""
                        android:textOn="" />
                    <ToggleButton
                        android:id="@+id/anlg2"
                        android:layout_width="46.12dp"
                        android:layout_height="27.42dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="45dp"
                        android:background="@drawable/toggle_selector"
                        android:checked="false"
                        android:textOff=""
                        android:textOn="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/textth1"
                        android:layout_width="wrap_content"
                        android:layout_height="28.5dp"
                        android:text="@string/vav_label_thermistor1"
                        android:textAppearance="@style/text_appearance"
                        android:fontFamily="@font/lato_regular"
                        android:layout_marginTop="13dp"/>
                    <TextView
                        android:id="@+id/textth2"
                        android:layout_width="wrap_content"
                        android:layout_height="28.5dp"
                        android:text="@string/vav_label_thermistor2"
                        android:fontFamily="@font/lato_regular"
                        android:textAppearance="@style/text_appearance"
                        android:layout_marginTop="38dp"/>
                    <TextView
                        android:id="@+id/textanlg1"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="@string/analogin1"
                        android:fontFamily="@font/lato_regular"
                        android:textAppearance="@style/text_appearance"
                        android:layout_marginTop="65dp"
                        />
                    <TextView
                        android:id="@+id/textangl2"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="@string/analogin2"
                        android:fontFamily="@font/lato_regular"
                        android:textAppearance="@style/text_appearance"
                        android:layout_marginTop="41dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="100dp">

                    <Spinner
                        android:id="@+id/th1select"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/lato_regular"
                        tools:listitem="@layout/spinner_dropdown_item" />
                    <Spinner
                        android:id="@+id/th2select"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="16dp"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/lato_regular"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        tools:listitem="@layout/spinner_dropdown_item"/>
                    <Spinner
                        android:id="@+id/analog1select"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="42dp"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/lato_regular"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        tools:listitem="@layout/spinner_dropdown_item"/>
                    <Spinner
                        android:id="@+id/analog2select"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="21dp"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/lato_regular"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        tools:listitem="@layout/spinner_dropdown_item"
                        />
                </LinearLayout>

            </LinearLayout>


            <Button
                android:id="@+id/setBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="50dp"
                android:layout_below="@+id/input"
                android:background="@null"
                android:button="@null"
                android:fontFamily="@font/lato_regular"
                android:text="@string/button_set"
                android:textAllCaps="true"
                android:textColor="@color/orange_75f"
                android:textSize="19.5dp"
                />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>