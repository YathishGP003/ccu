<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:orientation="vertical">

   <RelativeLayout
      android:id="@+id/layoutHeader"
      android:layout_width="980dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      android:layout_marginStart="26dp"
      android:layout_marginBottom="65dp">

      <ImageView
         android:id="@+id/goBackImage"
         android:layout_width="44dp"
         android:layout_height="44dp"
         android:layout_centerVertical="true"
         android:src="@drawable/angle_left_solid"
         app:tint="?orange_75f" />

      <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentEnd="true"
         android:layout_centerVertical="true"
         android:fontFamily="@font/lato_bold"
         android:textFontWeight="700"
         android:text="@string/title_hyperstatmodule"
         android:textColor="@color/black"
         android:textSize="32sp"
         android:lineHeight="36sp" />

   </RelativeLayout>

   <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="200dp"
      android:layout_marginBottom="40dp"
      android:scrollbarThumbVertical="@drawable/custom_thumb_scrollbar"
      android:overScrollMode="never">

      <LinearLayout
         android:layout_width="920dp"
         android:layout_height="wrap_content"
         android:orientation="vertical">

         <RelativeLayout
             android:id="@+id/hypersenseCell"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/next_arrow_button_enabled"
                app:tint="?orange_75f" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="114dp"
                android:layout_marginVertical="20dp"
                android:orientation="vertical">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="end"
                   android:gravity="end|center_vertical"
                   android:text="@string/title_hyperstatMonitoring"
                   android:textAppearance="@style/title_bold" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="end"
                   android:gravity="end|center_vertical"
                   android:text="@string/desc_hypersense"
                   android:textAppearance="@style/text_label_secondary" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:background="@color/listview_divider_color" />
         </RelativeLayout>

         <RelativeLayout
            android:id="@+id/cpuCell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <ImageView
               android:layout_width="34dp"
               android:layout_height="34dp"
               android:layout_alignParentEnd="true"
               android:layout_centerVertical="true"
               android:src="@drawable/next_arrow_button_enabled"
               app:tint="?orange_75f" />

            <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentEnd="true"
               android:layout_centerVertical="true"
               android:layout_marginEnd="114dp"
               android:layout_marginVertical="20dp"
               android:orientation="vertical">

               <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="end"
                  android:gravity="end|center_vertical"
                  android:text="@string/title_cpu"
                  android:textAppearance="@style/title_bold" />

               <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="end"
                  android:gravity="end|center_vertical"
                  android:text="@string/desc_cpu"
                  android:textAppearance="@style/text_label_secondary" />

            </LinearLayout>

            <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:layout_alignParentBottom="true"
               android:layout_alignParentEnd="true"
               android:background="@color/listview_divider_color" />
         </RelativeLayout>

         <RelativeLayout
            android:visibility="visible"
            android:id="@+id/hpuCell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <ImageView
               android:layout_width="34dp"
               android:layout_height="34dp"
               android:layout_alignParentEnd="true"
               android:layout_centerVertical="true"
               android:src="@drawable/next_arrow_button_enabled"
               app:tint="?orange_75f" />

            <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentEnd="true"
               android:layout_centerVertical="true"
               android:layout_marginEnd="114dp"
               android:layout_marginVertical="20dp"
               android:orientation="vertical">

               <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="end"
                  android:gravity="end|center_vertical"
                  android:text="@string/title_hpu"
                  android:textAppearance="@style/title_bold" />

               <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="end"
                  android:gravity="end|center_vertical"
                  android:text="@string/desc_hpu"
                  android:textAppearance="@style/text_label_secondary" />

            </LinearLayout>

            <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:layout_alignParentBottom="true"
               android:layout_alignParentEnd="true"
               android:background="@color/listview_divider_color" />
         </RelativeLayout>

         <RelativeLayout
            android:visibility="visible"
            android:id="@+id/twoPipeCell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" >

            <ImageView
               android:layout_width="34dp"
               android:layout_height="34dp"
               android:layout_alignParentEnd="true"
               android:layout_centerVertical="true"
               android:src="@drawable/next_arrow_button_enabled"
               app:tint="?orange_75f" />

            <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentEnd="true"
               android:layout_centerVertical="true"
               android:layout_marginEnd="114dp"
               android:layout_marginVertical="20dp"
               android:orientation="vertical">

               <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="end"
                  android:gravity="end|center_vertical"
                  android:text="@string/title_2pipe"
                  android:textAppearance="@style/title_bold" />

               <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="end"
                  android:gravity="end|center_vertical"
                  android:text="@string/desc_2pipe"
                  android:textAppearance="@style/text_label_secondary" />

            </LinearLayout>

            <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:layout_alignParentBottom="true"
               android:layout_alignParentEnd="true"
               android:background="@color/listview_divider_color" />
         </RelativeLayout>

         <RelativeLayout
            android:visibility="gone"
            android:id="@+id/fourPipeCell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <ImageView
               android:layout_width="34dp"
               android:layout_height="34dp"
               android:layout_alignParentEnd="true"
               android:layout_centerVertical="true"
               android:src="@drawable/next_arrow_button_enabled"
               app:tint="?orange_75f" />

            <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentEnd="true"
               android:layout_centerVertical="true"
               android:layout_marginEnd="114dp"
               android:layout_marginVertical="20dp"
               android:orientation="vertical">

               <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="end"
                  android:gravity="end|center_vertical"
                  android:text="@string/title_4pipe"
                  android:textAppearance="@style/title_bold" />

               <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="end"
                  android:gravity="end|center_vertical"
                  android:text="@string/desc_4pipe"
                  android:textAppearance="@style/text_label_secondary" />

            </LinearLayout>

            <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:layout_alignParentBottom="true"
               android:layout_alignParentEnd="true"
               android:background="@color/listview_divider_color" />
         </RelativeLayout>

         <RelativeLayout
            android:id="@+id/vrvCell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <ImageView
               android:layout_width="34dp"
               android:layout_height="34dp"
               android:layout_alignParentEnd="true"
               android:layout_centerVertical="true"
               android:src="@drawable/next_arrow_button_enabled"
               app:tint="?orange_75f" />

            <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentEnd="true"
               android:layout_centerVertical="true"
               android:layout_marginEnd="114dp"
               android:layout_marginVertical="20dp"
               android:orientation="vertical">

               <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="end"
                  android:gravity="end|center_vertical"
                  android:text="@string/title_vrv"
                  android:textAppearance="@style/title_bold" />

               <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="end"
                  android:gravity="end|center_vertical"
                  android:text="@string/desc_vrv"
                  android:textAppearance="@style/text_label_secondary" />

            </LinearLayout>
         </RelativeLayout>



      </LinearLayout>

   </ScrollView>
</LinearLayout>

