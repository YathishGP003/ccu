<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textTitleFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/lato_bold"
        android:text="@string/title_modbus"
        android:textAllCaps="true"
        android:textColor="@color/orange_75f"
        android:textSize="33.5sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvEquipmentType"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="65dp"
        android:layout_marginTop="60dp"
        android:text="@string/title_equipment_type"
        android:textAppearance="@style/text_appearance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitleFragment" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/spEquipmentType"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:layout_width="219dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:entries="@array/equipment_type"
        android:spinnerMode="dropdown"
        app:layout_constraintStart_toEndOf="@+id/tvEquipmentType"
        app:layout_constraintTop_toBottomOf="@+id/textTitleFragment"
        tools:listitem="@layout/spinner_item_custom" />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="65dp"
        android:layout_marginTop="60dp"
        android:text="@string/title_start_address"
        android:textAppearance="@style/text_appearance"
        app:layout_constraintStart_toEndOf="@+id/spEquipmentType"
        app:layout_constraintTop_toBottomOf="@+id/textTitleFragment" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/spAddress"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:layout_width="219dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:entries="@array/address_setting"
        android:spinnerMode="dropdown"
        app:layout_constraintStart_toEndOf="@+id/tvAddress"
        app:layout_constraintTop_toBottomOf="@+id/textTitleFragment"
        tools:listitem="@layout/spinner_item_custom" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/editSlaveId"
        android:layout_width="219dp"
        android:layout_height="45dp"
        android:singleLine="true"
        android:hint="Slave Address"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toEndOf="@+id/tvAddress"
        app:layout_constraintTop_toBottomOf="@+id/textTitleFragment"
        android:visibility="gone"
        android:inputType="number"
        android:contentDescription="TODO"/>

    <ImageView
        android:id="@+id/ivEditAddress"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="65dp"
        app:layout_constraintStart_toEndOf="@+id/spAddress"
        app:layout_constraintTop_toBottomOf="@+id/textTitleFragment"
        app:srcCompat="@drawable/ic_edit_accent"
        android:contentDescription="TODO" />


    <LinearLayout
        android:id="@+id/paramHeader"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:layout_marginStart="65dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="65dp"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@+id/tvEquipmentType">
        <LinearLayout
            android:id="@+id/paramHeader1"
            android:layout_weight="1"
            android:visibility="visible"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/title_param"
                android:textAppearance="@style/text_label" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/title_display"
                android:textAppearance="@style/text_label" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/paramHeader2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/title_param"
                android:textAppearance="@style/text_label" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/title_display"
                android:textAppearance="@style/text_label" />
        </LinearLayout>
    </LinearLayout>

