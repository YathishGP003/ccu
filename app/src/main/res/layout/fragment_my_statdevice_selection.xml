<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:id="@+id/main_layout"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="1200dp"
        android:layout_height="800dp"
        android:padding="30dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/angle_left_solid"
                app:tint="?orange_75f" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="410dp"
                android:fontFamily="@font/lato_bold"
                android:gravity="center"
                android:text="@string/myStat_device_tittle"
                android:textColor="@color/black"
                android:textSize="27sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="350dp"
            android:fontFamily="@font/lato_regular"
            android:text="@string/myStat_device_text"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <!-- Two Cards for MyStat versions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="110dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp">

                <!-- MyStat v1 -->
                <androidx.cardview.widget.CardView
                android:id="@+id/cardMyStatV1"
                    android:layout_width="450dp"
                    android:layout_height="460dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.1"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:background="@android:color/transparent">
                    <LinearLayout
                        android:layout_width="450dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/card_view_blur_border"
                        android:id="@+id/linearlayoutCardV1"
                        android:orientation="vertical"
                        android:padding="12dp">
                        <ImageView
                            android:layout_width="750dp"
                            android:layout_height="350dp"
                            android:layout_marginTop="10dp"
                            android:contentDescription=""
                            android:scaleType="fitCenter"
                            android:src="@drawable/mystat_device_selection_v1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/lato_bold"
                            android:text="@string/myStat_device_v1"
                            android:textColor="@color/black"
                            android:textSize="23sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:paddingBottom="3.dp"
                            android:fontFamily="@font/lato_regular"
                            android:text="@string/myStat_device_v1_ports"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="60dp">

                <!-- MyStat v2 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardMyStatV2"
                    android:layout_width="450dp"
                    android:layout_height="460dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.1"
                    android:layout_marginStart="20dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:background="@android:color/transparent">

                    <LinearLayout
                        android:layout_width="450dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/card_view_blur_border"
                        android:id="@+id/linearlayoutCardV2"
                        android:orientation="vertical"
                        android:padding="12dp">
                        <ImageView
                            android:layout_width="750dp"
                            android:layout_height="350dp"
                            android:layout_marginTop="10dp"
                            android:contentDescription=""
                            android:scaleType="fitCenter"
                            android:src="@drawable/mystat_device_selection_v2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/lato_bold"
                            android:text="@string/myStat_device_v2"
                            android:textColor="@color/black"
                            android:textSize="23sp"
                            android:paddingEnd="5.dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/lato_regular"
                            android:text="@string/myStat_device_v2_ports"
                            android:textColor="@color/black"
                            android:paddingBottom="3.dp"
                            android:textSize="18sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/nextBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1070dp"
            android:layout_marginTop="595dp"
            android:background="@android:color/transparent"
            app:cardBackgroundColor="@android:color/transparent"
            android:fontFamily="@font/lato_regular"
            android:text="NEXT"
            android:textColor="?orange_75f"
            android:textSize="18sp" />

    </RelativeLayout>
</LinearLayout>