<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/otaTestAddressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="LW Mesh Address"
            android:inputType="number"
            android:text="" />

        <EditText
            android:id="@+id/otaTestNameStringText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Firmware Name String"
            android:text="SmartStatV2_v1.1" />

        <LinearLayout
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/otaTestLevelSelectText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ota_test_level_select_prompt" />

            <Spinner
                android:id="@+id/otaTestLevelSelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/ota_test_level_select"
                android:gravity="left"
                android:prompt="@string/ota_test_level_select_prompt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/startOtaTestBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Start a Test OTA Update" />

            <Button
                android:id="@+id/resetOtaTestBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Reset in-progress OTA Update" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
