<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/rtuIE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="30dp"
                android:stretchColumns="0"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/ipTitle"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_gravity="start"
                        android:layout_weight="2"
                        android:text="IE Equipment IP Address"
                        android:textAppearance="@style/text_appearance"
                        android:textColor="@color/black" />


                    <Spinner
                        android:id="@+id/equipmentIp"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="45dp"
                        android:layout_column="3"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp" />

                    <ToggleButton
                        android:id="@+id/sp_zone_type"
                        android:layout_width="46.12dp"
                        android:layout_height="23dp"
                        android:layout_gravity="center"
                        android:background="@drawable/toggle_selector_multi_single_zone"
                        android:checked="false"
                        android:textOff=""
                        android:textOn="" />
                    <TextView
                        android:id="@+id/zone_type"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_gravity="start"
                        android:text="Multi Zone"
                        android:textAppearance="@style/text_appearance"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TableRow
                        android:id="@+id/genericRTUHeader"
                        android:layout_width="600dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/text_appearance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="ENABLE"
                                android:textColor="@color/my_gray"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="Equipment List"
                                android:textSize="@dimen/text_small_xlarge"
                                android:visibility="invisible" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="   Selector List  item touch  "
                                android:textSize="@dimen/text_small_xlarge"
                                android:visibility="invisible" />

                            <TextView
                                style="@style/text_appearance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="20dp"
                                android:text="TEST API"
                                android:textColor="@color/my_gray"
                                android:textSize="18sp"
                                android:visibility="visible" />
                        </RelativeLayout>
                    </TableRow>

                    <TableRow
                        android:id="@+id/rtuAnalog1"
                        android:layout_width="600dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <CheckBox
                                android:id="@+id/analog1RTU"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="0dp"
                                android:paddingRight="14dp"
                                android:text="  Cooling "
                                android:textAppearance="@style/text_appearance" />

                            <Spinner
                                android:id="@+id/analog1RTUSelector"
                                style="@style/Widget.AppCompat.Spinner.Underlined"
                                android:layout_width="wrap_content"
                                android:layout_height="45dp"
                                android:layout_centerInParent="true"
                                android:layout_centerVertical="true"
                                android:visibility="invisible" />

                            <Spinner
                                android:id="@+id/analog1RTUTest"
                                style="@style/Widget.AppCompat.Spinner.Underlined"
                                android:layout_width="115dp"
                                android:layout_height="45dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="0dp" />
                        </RelativeLayout>
                    </TableRow>

                    <TableRow
                        android:id="@+id/rtuAnalog2"
                        android:layout_width="600dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <CheckBox
                                android:id="@+id/analog2RTU"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_vertical"
                                android:paddingRight="14dp"
                                android:text="  Fan "
                                android:textAppearance="@style/text_appearance" />

                            <Spinner
                                android:id="@+id/analog2RTUSelector"
                                style="@style/Widget.AppCompat.Spinner.Underlined"
                                android:layout_width="wrap_content"
                                android:layout_height="45dp"
                                android:layout_centerInParent="true"
                                android:layout_centerVertical="true"
                                android:visibility="invisible" />

                            <Spinner
                                android:id="@+id/analog2RTUTest"
                                style="@style/Widget.AppCompat.Spinner.Underlined"
                                android:layout_width="115dp"
                                android:layout_height="45dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true" />
                        </RelativeLayout>
                    </TableRow>

                    <TableRow
                        android:id="@+id/rtuAnalog3"
                        android:layout_width="600dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <CheckBox
                                android:id="@+id/analog3RTU"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_vertical"
                                android:paddingRight="14dp"
                                android:text="  Heating "
                                android:textAppearance="@style/text_appearance" />

                            <Spinner
                                android:id="@+id/analog3RTUSelector"
                                style="@style/Widget.AppCompat.Spinner.Underlined"
                                android:layout_width="wrap_content"
                                android:layout_height="45dp"
                                android:layout_centerInParent="true"
                                android:layout_centerVertical="true"
                                android:visibility="invisible" />

                            <Spinner
                                android:id="@+id/analog3RTUTest"
                                style="@style/Widget.AppCompat.Spinner.Underlined"
                                android:layout_width="115dp"
                                android:layout_height="45dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="0dp" />
                        </RelativeLayout>
                    </TableRow>

                    <TableRow
                        android:id="@+id/humidification"
                        android:layout_width="600dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <CheckBox
                                android:id="@+id/humidificationCb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_vertical"
                                android:paddingRight="14dp"
                                android:text="  Building Humidity % "
                                android:textAppearance="@style/text_appearance" />

                            <Spinner
                                style="@style/Widget.AppCompat.Spinner.Underlined"
                                android:layout_width="wrap_content"
                                android:layout_height="45dp"
                                android:layout_centerInParent="true"
                                android:layout_centerVertical="true"
                                android:visibility="invisible" />

                            <Spinner
                                android:id="@+id/humidificationTest"
                                style="@style/Widget.AppCompat.Spinner.Underlined"
                                android:layout_width="115dp"
                                android:layout_height="45dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true" />
                        </RelativeLayout>
                    </TableRow>

                    <TableRow
                        android:id="@+id/oaMin"
                        android:layout_width="600dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="15dp"
                        android:visibility="gone">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="  OA Minimum "
                                android:textAppearance="@style/text_appearance"
                                android:textColor="@color/black" />

                            <Spinner
                                style="@style/Widget.AppCompat.Spinner.Underlined"
                                android:layout_width="wrap_content"
                                android:layout_height="45dp"
                                android:layout_centerInParent="true"
                                android:layout_centerVertical="true"
                                android:visibility="invisible" />

                            <Spinner
                                android:id="@+id/oaMinTest"
                                style="@style/Widget.AppCompat.Spinner.Underlined"
                                android:layout_width="115dp"
                                android:layout_height="45dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true" />
                        </RelativeLayout>
                    </TableRow>
                </LinearLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:columnCount="4">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="Cooling DAT Min (째F)"
                        android:textAppearance="@style/text_appearance"
                        android:textColor="@color/black" />

                    <Spinner
                        android:id="@+id/coolingDatMin"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="115dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="16dp"
                        android:text="Cooling DAT Max (째F)"
                        android:textAppearance="@style/text_appearance"
                        android:textColor="@color/black" />

                    <Spinner
                        android:id="@+id/coolingDatMax"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="115dp"
                        android:layout_height="45dp"
                        android:layout_column="3"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="14dp"
                        android:text="Heating DAT Min (째F)"
                        android:textAppearance="@style/text_appearance"
                        android:textColor="@color/black" />

                    <Spinner
                        android:id="@+id/heatingDatMin"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="115dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginEnd="15dp"
                        android:text="Heating DAT Max (째F)"
                        android:textAppearance="@style/text_appearance"
                        android:textColor="@color/black" />

                    <Spinner
                        android:id="@+id/heatingDatMax"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="115dp"
                        android:layout_height="45dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginTop="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="3"
                        android:layout_column="0"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:text="Static Pressure Min (in)"
                        android:textAppearance="@style/text_appearance"
                        android:textColor="@color/black" />

                    <Spinner
                        android:id="@+id/spMin"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="100dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="14dp"
                        android:text="Static Pressure Max (in)"
                        android:textAppearance="@style/text_appearance"
                        android:textColor="@color/black" />

                    <Spinner
                        android:id="@+id/spMax"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="100dp"
                        android:layout_height="45dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginTop="14dp" />
                </GridLayout>
            </TableLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/buttonNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="10dp"
                    android:background="@null"
                    android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center_vertical"
                    android:text="@string/button_next"
                    android:textColor="?orange_75f"
                    android:textSize="24dp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
