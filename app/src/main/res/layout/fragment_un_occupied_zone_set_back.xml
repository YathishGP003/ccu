<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingLeft="72dp"
    android:paddingTop="32dp"
    android:paddingRight="72dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:ignore="MissingDefaultResource">
    <RelativeLayout
        android:layout_width="970dp"
        android:layout_height="wrap_content">



    <TextView
        android:id="@+id/text_unoccupied_zone_setback"
        style="@style/text_appearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="@string/unoccupied_zone_setback" />

        <LinearLayout
            android:id="@+id/unocccupied_layout"
            android:layout_below="@+id/text_unoccupied_zone_setback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_setback"
                style="@style/ToggleLimits"
                android:layout_marginStart="40dp"
                android:text="@string/setback" />

            <Spinner
                android:id="@+id/unoccupiedzonesetback"
                style="@style/TableSpinner"
                android:layout_width="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_height ="40dp"
                android:overlapAnchor="false"
                android:textColor="@color/selection_gray"
                tools:listitem="@layout/spinner_dropdown_item"/>
        </LinearLayout>

        <a75f.io.renatus.views.RangeBarView
            android:id="@+id/rangeSeekBar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/unocccupied_layout" />

        <LinearLayout
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:layout_below="@+id/rangeSeekBar">

            <ImageView
                android:id="@+id/custom_toast_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10sp"
                android:src="@drawable/ic_warning" />

            <TextView
                android:id="@+id/custom_toast_message_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/un_occupied_message"
                android:textColor="@color/warning_red" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_gravity="right"
            android:paddingTop="30dp"
            android:paddingStart="650dp"
            android:layout_below="@+id/message">

            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="30dp"
                android:background="@null"
                android:fontFamily="@font/lato_regular"
                android:text="@string/cancel"
                android:textColor="?orange_75f"
                android:textSize="20sp"
                app:layout_constraintRight_toLeftOf="@+id/buttonSave"
                app:layout_constraintRight_toRightOf="parent"
                />
            <Button
                android:id="@+id/buttonSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@null"
                android:fontFamily="@font/lato_regular"
                android:text="@string/save_schedule"
                android:textColor="?orange_75f"
                android:textSize="20sp"
                app:layout_constraintRight_toRightOf="parent"
                style="?android:attr/buttonBarButtonStyle" />


        </LinearLayout>

    </RelativeLayout>

</FrameLayout>