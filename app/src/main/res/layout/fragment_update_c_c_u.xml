<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/update_ccu_fragment_layout"
        android:layout_width="592dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:paddingLeft="10dp"
                android:src = "@drawable/ic_alert">

            </ImageView>
            <TextView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:paddingStart="20dp"
                android:fontFamily="@font/lato_regular"
                android:textColor="#000000"
                android:text="@string/updateAppToRecommendedVersion" />
            <TextView
                android:id="@+id/ccu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:paddingStart="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/update_details_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="65dp"
            >
            <LinearLayout
                android:id="@+id/update_details"
                android:layout_width="502dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?orange_75f_secondary"
                android:padding="15dp"
                android:paddingStart="11dp">
                <TextView
                    android:id="@+id/update_app_replace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:visibility="gone"
                    android:paddingBottom="8dp"
                    android:text="@string/updateAppToRecommendedVersion">
                </TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:fontFamily="@font/lato_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#333333"
                        android:text="@string/current_version">
                    </TextView>
                    <TextView
                        android:fontFamily="@font/lato_bold"
                        android:id="@+id/currentVersion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:textSize="18sp">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:fontFamily="@font/lato_regular"
                        android:id="@+id/latestVersionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/latest_version"
                        android:textColor="#333333"
                        android:textSize="18sp">
                    </TextView>
                    <TextView
                        android:fontFamily="@font/lato_bold"
                        android:id="@+id/latestVersion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:textSize="18sp">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:text="@string/download_size"
                        android:textSize="18sp">
                    </TextView>
                    <TextView
                        android:id="@+id/downloadSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="18sp">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/progress_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingTop="15dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/layoutId">
                        <TextView
                            android:id="@+id/downloading_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="Downloading.. ">
                        </TextView>
                        <TextView
                            android:id="@+id/downloaded_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="">
                        </TextView>
                        <TextView
                            android:id="@+id/file_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="16sp">
                        </TextView>
                    </LinearLayout>

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progress_bar"
                        android:layout_width="500dp"
                        android:layout_height="wrap_content"
                        android:indeterminate="true"
                        app:indicatorColor="#E24301"
                        app:trackColor="#F5F2F2"
                        app:trackCornerRadius="10dp"
                        app:trackThickness="15dp"
                        android:paddingTop="10dp">
                    </com.google.android.material.progressindicator.LinearProgressIndicator>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/connectivityIssues"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src = "@drawable/ic_alert">
                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Connectivity issues "
                        android:paddingStart="10dp"
                        android:textSize="16sp"></TextView>
                </LinearLayout>
        </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/cancel_update"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:id="@+id/cancel"
                android:text="CANCEL"
                android:layout_marginRight="19dp"
                android:textSize="19.5sp"
                android:textColor="#E24301"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="|"
                android:textSize="19.5sp"
                android:layout_marginRight="19dp"
                android:textColor="#CCCCCC"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UPDATE APP"
                android:id="@+id/updateApp"
                android:textSize="19.5sp"
                android:paddingRight="25dp"
                android:textColor="#E24301">
            </TextView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:visibility="gone"
        android:id="@+id/server_down_layout"
        android:layout_width="502dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:paddingStart="11dp">
    <LinearLayout
        android:padding="15dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            android:src = "@drawable/ic_alert">

        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:paddingStart="20dp"
            android:fontFamily="@font/lato_regular"
            android:textColor="#000000"
            android:text="@string/server_down_string" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end">
            <TextView
                android:paddingTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:id="@+id/cancel_server_down"
                android:text="CANCEL"
                android:layout_marginRight="19dp"
                android:textSize="19.5sp"
                android:textColor="#E24301"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>