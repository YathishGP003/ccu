<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editText_vacationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:hint="Vacation Name"
            android:inputType="textPersonName" />


        <ImageView
            android:id="@+id/clearText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:padding="8dp"
            android:src="@drawable/icon_close" />


    </RelativeLayout>

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/calendarView"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        app:mcv_selectionColor="@color/orange"
        app:mcv_selectionMode="range"
        android:layout_gravity="center"
        app:mcv_showOtherDates="all"
        app:mcv_headerTextAppearance="@style/month_text_appearance"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonCancelTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@null"
            android:fontFamily="@font/lato_regular"
            android:text="CANCEL"
            android:textColor="@color/orange_75f"
            android:textSize="20dp" />

        <View android:layout_width="0.01dp"
            android:layout_height="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_gravity="center_vertical"
            android:background="@color/line_greycolor"/>

        <Button
            android:id="@+id/buttonSaveTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@null"
            android:fontFamily="@font/lato_regular"
            android:text="SAVE"
            android:textColor="@color/orange_75f"
            android:textSize="20dp" />

    </LinearLayout>


</LinearLayout>