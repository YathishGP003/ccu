<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="100dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/equipLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="65dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/tvEquipmentType"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:text="@string/title_equipment_type"
            android:textAppearance="@style/text_appearance"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/equipmentTypeVal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="fill_vertical"
            android:layout_marginStart="65dp"
            android:text=""
            android:textAppearance="@style/text_appearance"
            app:layout_constraintStart_toEndOf="@+id/tvEquipmentType" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="65dp"
            android:text="@string/title_start_address"
            android:textAppearance="@style/text_appearance"
            app:layout_constraintStart_toEndOf="@+id/spEquipmentType" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spAddress"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:entries="@array/address_setting"
            android:spinnerMode="dropdown"
            app:layout_constraintStart_toEndOf="@+id/tvAddress"
            tools:listitem="@layout/spinner_item_custom" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editSlaveId"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:singleLine="true"
            android:hint="Slave Address"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/tvAddress"
            app:layout_constraintTop_toBottomOf="@+id/textTitleFragment"
            android:visibility="gone"
            android:inputType="number"
            android:contentDescription="TODO"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/paramHeader"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="65dp"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@+id/equipLayout">
        <LinearLayout
            android:id="@+id/paramHeader1"
            android:layout_weight="1"
            android:visibility="visible"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/title_param"
                android:textAppearance="@style/text_label" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/title_display"
                android:textAppearance="@style/text_label" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/paramHeader2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/title_param"
                android:textAppearance="@style/text_label" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/title_display"
                android:textAppearance="@style/text_label" />
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerSubEquipParams"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="65dp"
        app:layout_constraintTop_toBottomOf="@+id/paramHeader"/>
</androidx.constraintlayout.widget.ConstraintLayout>