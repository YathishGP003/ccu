<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/equipment_type_layout"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="@dimen/margin_20"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvEquipmentType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineHeight="28sp"
            android:text="COMPANY PAC MODEL 1-0xXXXXXX"
            android:textAppearance="@style/title_bold"
            android:textColor="@color/primary_dark"
            android:textSize="@dimen/sp_24" />

        <TextView
            android:id="@+id/module_status"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="top"
            android:layout_marginLeft="5dp"
            android:background="@drawable/module_dead"
            android:gravity="top"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/last_updated_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/dp_16"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/last_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Updated: "
            android:textAppearance="@style/title_bold"
            android:textSize="@dimen/sp_22" />

        <TextView
            android:id="@+id/last_updated_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/label_grey" />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="1098dp"
        android:background="#F4E2E0"
        android:id="@+id/noEquipPaired"
        android:padding="22dp"
        android:orientation="horizontal"
        android:layout_height="74dp">
        <TextView
            android:id="@+id/tvNoEquipPaired"
            android:layout_width="wrap_content"
            android:textAlignment="gravity"
            android:layout_height="wrap_content"
            android:textSize="22px"
            android:lineHeight="26px"
            android:textColor="@color/secondary"
            android:text="No Model Configured. Go to Site Sequencer to set up a model for this Connect Node."
            >
        </TextView>
    </LinearLayout>

    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/detailedComposeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="@dimen/margin_32"
        android:layout_marginTop ="16dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</LinearLayout>