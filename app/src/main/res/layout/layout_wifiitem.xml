<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageWifi"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/ic_wifi_svg"
        android:layout_marginLeft="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textWifiNw"
        android:layout_width="290dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Wifi Network Name"
        android:textColor="@android:color/black"
        android:alpha="0.87"
        android:fontFamily="@font/lato_regular"
        android:gravity="left|center_vertical"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/textisConnected"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textWifiNw"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textWifiNw"
        android:text="SAVED"
        android:textColor="@android:color/black"
        android:alpha="0.6"
        android:fontFamily="@font/lato_regular"
        android:gravity="left|center_vertical"
        android:textSize="18dp"/>


    <ImageView
        android:id="@+id/imageSecurity"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/ic_security_svg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="12dp"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_greycolor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textisConnected"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textisConnected"
        android:layout_marginTop="10dp"
        android:alpha="0.37"/>
</androidx.constraintlayout.widget.ConstraintLayout>