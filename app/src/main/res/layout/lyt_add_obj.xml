<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_25"
    android:orientation="vertical">

    <TextView
        android:drawablePadding="@dimen/dp_10"
        android:drawableEnd="@drawable/ic_cancel"
        android:id="@+id/label_object_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/lato_bold"
        android:paddingTop="8dp"
        android:text="Object"
        android:textColor="#333333"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/label_object_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lato_regular"
                android:paddingTop="8dp"
                android:text="@string/label_object_type"
                android:textColor="#333333"
                android:textSize="@dimen/sp_22"
                android:textStyle="normal" />

            <Spinner
                android:id="@+id/sp_object_types"
                style="@style/customSpinnerDownArrow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/margin_5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/label_object_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_100"
                android:layout_weight="1"
                android:fontFamily="@font/lato_regular"
                android:text="@string/label_object_id"
                android:textColor="#333333"
                android:textSize="@dimen/sp_22"
                android:textStyle="normal" />


            <EditText
                android:id="@+id/etObjectId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_40"
                android:layout_weight="1"
                android:digits="0123456789."
                android:inputType="number"
                android:maxLength="15"
                android:text="1"
                android:textAppearance="@style/title_normal_22_grey"
                android:textColor="@color/grey_select" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/containerToAddProperties"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>
    <Button
        android:id="@+id/btnAddProperty"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="50dp"
        android:background="@null"
        android:button="@null"
        android:fontFamily="@font/lato_regular"
        android:gravity="end"
        android:paddingLeft="20dp"
        android:paddingTop="@dimen/margin_40"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:text="@string/txt_add_property"
        android:textColor="?orange_75f"
        android:textSize="22sp" />
    <View
        android:layout_marginTop="@dimen/dp_30"
        android:background="#CCCCCC"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>




