<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/label_configure_as"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:text="@string/label_configure_service"
            android:textColor="#333333"
            android:textSize="@dimen/sp_24"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/container_property"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_25"
            android:layout_marginTop="@dimen/margin_40"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/label_destination_ip_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato_regular"
                        android:paddingTop="8dp"
                        android:text="@string/label_destination_ip_address"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_22"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/et_destination_ip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:digits="0123456789."
                        android:inputType="number"
                        android:maxLength="15"
                        android:text="192.168.1.1"
                        android:textAppearance="@style/title_normal_22_grey"
                        android:textColor="@color/grey_select" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/label_port"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_100"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato_regular"
                        android:text="@string/label_port"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_22"
                        android:textStyle="normal" />


                    <EditText
                        android:id="@+id/etPort"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_40"
                        android:layout_weight="1"
                        android:digits="0123456789."
                        android:inputType="number"
                        android:maxLength="15"
                        android:text="47808"
                        android:textAppearance="@style/title_normal_22_grey"
                        android:textColor="@color/grey_select" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/btnAddObject"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/container_property"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="40dp"
            android:layout_toStartOf="@+id/btnReadProperty"
            android:background="@null"
            android:button="@null"
            android:fontFamily="@font/lato_regular"
            android:paddingLeft="20dp"
            android:paddingTop="@dimen/margin_40"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="@string/txt_add_object"
            android:textColor="?orange_75f"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnReadProperty"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/container_property"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="50dp"
            android:background="@null"
            android:button="@null"
            android:fontFamily="@font/lato_regular"
            android:paddingLeft="20dp"
            android:paddingTop="@dimen/margin_40"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="@string/txt_read_property"
            android:textColor="?orange_75f"
            android:textSize="22sp" />
    </RelativeLayout>

</androidx.core.widget.NestedScrollView>