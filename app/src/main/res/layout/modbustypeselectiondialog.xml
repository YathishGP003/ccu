<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/default_text_view"
        style="@style/WindowTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingTop="20dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        android:text="@string/txt_place_holder"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp">

        <ImageView
            android:id="@+id/imageGoback"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="64dp"
            android:padding="2.5dp"
            android:rotation="180"
            app:srcCompat="@drawable/icon_arrowright" />

        <TextView
            android:id="@+id/textTitleFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="190dp"
            android:fontFamily="@font/lato_bold"
            android:text="@string/label_modbusselectdevicetype"
            android:textAllCaps="true"
            android:textColor="@color/orange_75f"
            android:textSize="33.5sp"
            android:textStyle="bold" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layoutHeader"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_mbequipment"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginStart="370dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="220dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textMBEquipment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/title_modbusequipment"
                    android:textAppearance="@style/title_normal" />

                <TextView
                    android:id="@+id/textMBEquipmentDes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/description_modbusequipment"
                    android:textAppearance="@style/text_label" />

            </LinearLayout>

            <ImageView
                android:id="@+id/nextMBEq"
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="96dp"
                android:src="@drawable/icon_arrowright" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentBottom="true"
                android:alpha="0.37"
                android:background="@color/text_color" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_mbenergymeter"
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:layout_marginStart="370dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="220dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textMBEM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@string/title_modbusenergymeter"
                    android:textAppearance="@style/title_normal" />

                <TextView
                    android:id="@+id/textMBEMDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/description_modbusenergymeter"
                    android:textAppearance="@style/text_label" />

            </LinearLayout>

            <ImageView
                android:id="@+id/nextSS"
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="96dp"
                android:src="@drawable/icon_arrowright" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentBottom="true"
                android:alpha="0.37"
                android:background="@color/text_color" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>