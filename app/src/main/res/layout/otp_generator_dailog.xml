<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="?title_orange"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:text="VERIFICATION CODE" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            android:orientation="horizontal">
            <TextView
                style="?title"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:text="8 8 8  2 4 4" />
            <ImageView
                android:id="@+id/backUpRefresh"
                style="?title_orange"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                app:srcCompat="@drawable/ic_refresh_orage" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/otpEmailId"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:fontFamily="@font/lato_regular"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:hint="@string/otp_send_email"
                android:inputType="textWebEmailAddress"
                android:textColor="@color/input_textcolor"
                android:textSize="19.5dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
               android:id="@+id/otptimer"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:text="It will expire in" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/btnOkOtp"
                style="?action_text_appearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:enabled="true"
                android:drawablePadding="50dp"
                android:text="@string/ok" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
