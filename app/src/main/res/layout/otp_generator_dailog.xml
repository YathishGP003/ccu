<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_dialog"
    android:elevation="12dp"
    android:padding="35dp"
    android:orientation="vertical">

    <TextView
        style="?action_text_appearance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BUILDING PASSCODE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="6dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/otpValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="32dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/otpRegenerate"
            style="?title_orange"
            android:layout_marginLeft="22dp"
            android:layout_width="34dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_refresh_orage" />
    </LinearLayout>


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/otpEmailId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginRight="24dp"
        android:backgroundTint="@color/line_greycolor"
        android:fontFamily="@font/lato_regular"
        android:gravity="left|center_vertical"
        android:hint="@string/otp_send_email"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:textColor="@color/input_textcolor"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/otptimer"
        android:layout_marginTop="10dp"
        style="@style/otp_lable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/buttonEmailOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@null"
        android:textSize="22sp"
        android:button="@null"
        android:text="@string/ok"
        android:textAllCaps="true"
        android:textColor="?orange_75f" />

</LinearLayout>
