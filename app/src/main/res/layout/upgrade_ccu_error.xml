<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="528dp"
    android:layout_height="268dp"
    android:background="@drawable/border_dialog"
    android:elevation="12dp"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/otpRegenerate"
            style="?title_orange"
            android:layout_marginStart="27dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="9dp"
            android:layout_width="34.91dp"
            android:layout_gravity="center"
            android:layout_height="30.55dp"
            app:srcCompat="@drawable/ic_dialog_alert" />
        <TextView
            style="@style/title_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Error"
            android:textStyle="bold"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="24dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/toAchieveUpgrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To achieve the upgrade to CCU version 2.411.2, \n
you must ensure your CCU version is at least 2.122.2. "
            android:textColor="@android:color/black"
            android:textSize="20dp" />
        <TextView
            android:layout_marginTop="20dp"

            android:id="@+id/pleaseUpgradeTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="Please upgrade to 2.122.2 first, and then proceed to \n
upgrade to 2.411.2"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/gotIt"
            android:layout_marginTop="23dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?orange_75f"
            android:layout_gravity="center"
            android:text="GOT IT"
            android:layout_marginBottom="20dp"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>
