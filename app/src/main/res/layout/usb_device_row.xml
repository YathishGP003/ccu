<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_main_row"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp"
        android:background="@android:color/transparent"
        android:weightSum="17">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_weight="5">
            <ImageView
                android:id="@+id/right_arrow"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/icon_arrow_right"
                android:layout_marginTop="4dp"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/down_arrow"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/icon_arrow_down"
                android:layout_marginTop="4dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_serial"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="start"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:textSize="20sp"
                android:paddingStart="@dimen/margin_20"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Vendor | Product -->
        <TextView
            android:id="@+id/tv_vendor"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingStart="@dimen/margin_85"
            android:fontFamily="@font/lato_regular"
            android:textSize="20sp"
            android:textColor="@android:color/black" />

        <!-- Protocol with icon -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_marginStart="@dimen/margin_40"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/protocol_optionsNA"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingStart="40dp"
                android:layout_gravity="center"
                android:text="@string/na"
                android:fontFamily="@font/lato_regular"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:visibility="gone">
            </TextView>
            <Spinner
                android:id="@+id/protocol_options"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/margin_40"
                android:layout_gravity="center"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:spinnerMode="dropdown"
                android:entries="@array/usb_protocol_options" />
        </LinearLayout>
        <!-- Port -->
        <TextView
            android:id="@+id/tv_port"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/margin_20"
            android:gravity="center"
            android:fontFamily="@font/lato_regular"
            android:textSize="18sp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/expandable_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="16dp"
        android:background="@android:color/white">

        <!--<TextView
            android:id="@+id/tv_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Additional device details shown here."
            android:textSize="18sp"
            android:textColor="@android:color/black" />-->
    </LinearLayout>
</LinearLayout>