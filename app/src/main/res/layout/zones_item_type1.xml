<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lt_column1"
        android:layout_width="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_point1label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/title_normal"/>

        <TextView
            android:id="@+id/text_point1value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/label_grey"/>
    </LinearLayout>
   <LinearLayout
        android:id="@+id/lt_column_a2Sensor"
        android:layout_width="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_pointA2SensorLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textAppearance="@style/title_normal"/>

        <TextView
            android:id="@+id/text_pointA2SensorValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textAppearance="@style/label_grey"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lt_column2"
        android:layout_width="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="56dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_point2label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/title_normal"/>

        <TextView
            android:id="@+id/text_point2value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/label_grey"/>
    </LinearLayout>
</LinearLayout>
