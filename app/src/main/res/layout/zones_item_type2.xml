<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:weightSum="2"
        xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:id="@+id/lt_column1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/text_point1label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Damper : "
                android:layout_gravity="center_vertical"
                android:textAppearance="@style/title_normal"/>

            <Spinner
                android:id="@+id/spinnerValue1"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lt_column2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/text_point2label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Damper : "
                android:layout_gravity="center_vertical"
                android:textAppearance="@style/title_normal"/>

            <Spinner
                android:id="@+id/spinnerValue2"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
</LinearLayout>
