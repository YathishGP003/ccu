<resources>

    <!-- Base application theme. -->
    <style name="RenatusAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grey_select</item>
        <item name="colorPrimaryDark">@color/grey_select</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="RenatusAppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RenatusTabStyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabTextAppearance">@style/RenatusTabTextStyle</item>
    </style>

    <style name="RenatusTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>

    </style>

    <style name="WindowTextStyle">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="buttonstyle">
        <item name="android:textSize">@dimen/text_small</item>
    </style>


    <style name="NewDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowTitleStyle">@style/WindowTextStyle</item>
        <item name="colorAccent">@color/black</item>
        <item name="buttonStyle">@style/buttonstyle</item>

    </style>

    <style name="toggle_on_off">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textOff">Off</item>
        <item name="android:textOn">On</item>
    </style>

    <style name="SwitchTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/accent</item>

    </style>

    <style name="FButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:shadowColor">#FF4F4F4F</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FButton.Toggle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_toggle_background</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:shadowColor">#FF4F4F4F</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FButton.Featured">
        <item name="android:background">@drawable/button_featured_background</item>
        <item name="android:textColor">@color/buttonTextColorFeatured</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FButton.Decline">
        <item name="android:background">@drawable/button_decline_background</item>
        <item name="android:textColor">@color/buttonTextColorFeatured</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="FullscreenTheme" parent="RenatusAppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="DefaultNumberPickerTheme" parent="RenatusAppTheme">
        <item name="colorControlNormal">@color/orange_75f</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/hint_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">-10dp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="text_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="text_toggleappearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">19.5sp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="text_label" parent="@android:style/TextAppearance">
        <item name="android:textSize">19.5sp</item>
        <item name="android:textColor">@color/hint_textcolor</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="text_header" parent="@android:style/TextAppearance">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/orange_75f</item>
        <item name="android:fontFamily">@font/lato_light</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="text_values" parent="@android:style/TextAppearance">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/hint_textcolor</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="title_white" parent="@android:style/TextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="title_grey" parent="@android:style/TextAppearance">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/hint_textcolor</item>
        <item name="android:fontFamily">@font/lato_light</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="title_orange" parent="@android:style/TextAppearance">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/orange_75f</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="action_text_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps"> true</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="label_black" parent="@android:style/TextAppearance">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="title_black" parent="@android:style/TextAppearance">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/lato_black</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="title_normal" parent="@android:style/TextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="label_values" parent="@android:style/TextAppearance">
        <item name="android:textSize">19.5sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="month_text_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="label_grey" parent="@android:style/TextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/hint_textcolor</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="spinner_grey" parent="@android:style/TextAppearance">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/hint_textcolor</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="edittext_grey" parent="@android:style/TextAppearance">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/hint_textcolor</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <style name="title_white_bold" parent="@android:style/TextAppearance">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="label_orange" parent="@android:style/TextAppearance">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/orange_75f</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>


</resources>
