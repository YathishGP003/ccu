<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleSse"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/progress_gray"
        android:gravity="center_vertical"
        android:paddingLeft="40dp"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/text_medium_xlarge" />

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:background="@drawable/snsse">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:columnCount="4"
            android:rowCount="3"
            android:layout_marginLeft="600dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="46dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_column="0"
                android:layout_row="0"
                android:text="Enable"
                android:textSize="@dimen/text_large_xlarge"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="Output"
                android:textSize="@dimen/text_large_xlarge"
                android:layout_marginLeft="30dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:text="Actuator Type"
                android:textSize="@dimen/text_large_xlarge"
                android:layout_marginLeft="30dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:text="Force Test"
                android:layout_marginLeft="30dp"
                android:textSize="@dimen/text_large_xlarge" />
            <android.support.v7.widget.SwitchCompat
                android:id="@+id/sseRelay1Switch"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_column="0"
                android:layout_gravity="left|center_vertical"
                android:layout_row="1"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"

                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:text="Relay 1"
                android:layout_weight="1"
                android:textSize="@dimen/text_large_xlarge"
                android:layout_marginLeft="30dp" />

            <Spinner
                android:id="@+id/sseRelay1Actuator"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginLeft="30dp" />
            <LinearLayout
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center">

                <ToggleButton
                    android:id="@+id/sseRelay1ForceTestBtn"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/selector"></ToggleButton>
            </LinearLayout>

            <!--<ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/sseRelay1ForceTestBtn" />-->
            <android.support.v7.widget.SwitchCompat
                android:id="@+id/sseRelay2Switch"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_column="0"
                android:layout_gravity="left|center_vertical"
                android:layout_row="2"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:text="Relay 2"
                android:layout_weight="1"
                android:textSize="@dimen/text_large_xlarge"
                android:layout_marginLeft="30dp" />

            <Spinner
                android:id="@+id/sseRelay2Actuator"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginLeft="30dp" />
            <LinearLayout
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center">

                <ToggleButton
                    android:id="@+id/sseRelay2ForceTestBtn"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/selector"></ToggleButton>
            </LinearLayout>

            <!--<ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/sseRelay2ForceTestBtn" />-->
        </GridLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:background="@color/progress_gray"></View>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/sseCancelCommand"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@color/dark_gray" />

        <TextView
            android:id="@+id/sseSetCommand"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="Set"
            android:textColor="@color/accent" />
    </LinearLayout>
</LinearLayout>