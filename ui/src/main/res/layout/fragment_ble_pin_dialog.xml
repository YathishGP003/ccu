<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ble_dialog_enter_pin_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Pin"></TextView>

    <EditText android:enabled="false"
        android:id="@+id/ble_dialog_enter_pin_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Pin" />

    <Button android:enabled="false"
        android:id="@+id/ble_dialog_done_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:text="Done"></Button>
</LinearLayout>