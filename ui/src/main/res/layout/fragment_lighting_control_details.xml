<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="50dp"
              android:layout_marginRight="50dp"
              android:orientation="vertical"
              android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.9">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:overScrollMode="never">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:columnCount="5"
                android:rowCount="7">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_margin="20dp"
                    android:layout_row="0"
                    android:text="Enable"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical|center_horizontal|center"
                    android:layout_marginLeft="10dp"
                    android:text="Output"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Actuator Type"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Circuit Name"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>


                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/lcmRelay1Switch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_gravity="left|center_vertical|center_horizontal"
                    android:layout_margin="20dp"
                    android:layout_row="1"
                    android:theme="@style/SwitchTheme"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical|center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="Relay 1"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

                <Spinner
                    android:id="@+id/lcmRelay1Actuator"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/lcmRelay1EditName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:minEms="10"/>

                <ImageView
                    android:id="@+id/lcmRelay1EditImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/content_edit" />

                <ToggleButton
                    android:id="@+id/lcmRelay1Override"
                    style="@style/toggle_on_off"
                    android:visibility="gone"/>


                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/lcmRelay2Switch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_gravity="left|center_vertical"
                    android:layout_margin="20dp"
                    android:layout_row="2"
                    android:theme="@style/SwitchTheme"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical|center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="Relay 2"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

                <Spinner
                    android:id="@+id/lcmRelay2Actuator"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/lcmRelay2EditName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:minEms="10"/>

                <ImageView
                    android:id="@+id/lcmRelay2EditImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/content_edit" />

                <ToggleButton
                    android:id="@+id/lcmRelay2Override"
                    style="@style/toggle_on_off"
                    android:visibility="gone"
                    />

                <android.support.v7.widget.SwitchCompat

                    android:id="@+id/lcmAnalog1OutSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_gravity="left|center_vertical"
                    android:layout_margin="20dp"
                    android:layout_row="3"
                    android:theme="@style/SwitchTheme"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical|center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="Analog 1 Out"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

                <Spinner
                    android:id="@+id/lcmAnalog1OutActuator"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/lcmAnalog1OutEditName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:minEms="10"/>

                <ImageView
                    android:id="@+id/lcmAnalog1OutEditImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/content_edit" />

                <ToggleButton
                    android:id="@+id/lcmAnalog1OutOverride"
                    style="@style/toggle_on_off"
                    android:visibility="gone"
                    />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/lcmAnalog2OutSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_gravity="left|center_vertical"
                    android:layout_margin="20dp"
                    android:layout_row="4"
                    android:theme="@style/SwitchTheme"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical|center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="Analog 2 Out"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

                <Spinner
                    android:id="@+id/lcmAnalog2OutActuator"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/lcmAnalog2OutEditName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:minEms="10"/>

                <ImageView
                    android:id="@+id/lcmAnalog2OutEditImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/content_edit" />


                <ToggleButton
                    android:id="@+id/lcmAnalog2OutOverride"
                    style="@style/toggle_on_off"
                    android:visibility="gone"/>

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/lcmAnalog1InSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_gravity="left|center_vertical"
                    android:layout_margin="20dp"
                    android:layout_row="5"
                    android:clickable="true"
                    android:theme="@style/SwitchTheme"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical|center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="Analog 1 In"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

                <Spinner
                    android:id="@+id/lcmAnalog1InActuator"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/lcmAnalog1InEditName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:minEms="10"/>

                <ImageView
                    android:id="@+id/lcmAnalog1InEditImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/content_edit" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/lcmAnalog2InSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_gravity="left|center_vertical"
                    android:layout_margin="20dp"
                    android:layout_row="6"
                    android:clickable="true"
                    android:theme="@style/SwitchTheme"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical|center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="Analog 2 In"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

                <Spinner
                    android:id="@+id/lcmAnalog2InActuator"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/lcmAnalog2InEditName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:minEms="10"/>

                <ImageView
                    android:id="@+id/lcmAnalog2InEditImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/content_edit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="left|center_vertical|center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>
            </GridLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:gravity="right|center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/lcmCancelCommand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/lcmSetCommand"
            android:layout_marginRight="50dp"
            android:text="Cancel"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/lcmSetCommand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="Set"
            android:textColor="@color/black"/>
    </LinearLayout>
</LinearLayout>
